---
export interface Props {
    title?: string;
}

const { title = 'Basis Stack' } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <link
            rel="icon"
            type="image/svg+xml"
            href={`${import.meta.env.BASE_URL}favicon.svg`}
        />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>

        <!-- Alpine.js with ES6 modules -->
        <script type="module">
            import '/src/lib/alpine.js';
        </script>
    </head>
    <body>
        <slot />
    </body>
</html>

<style is:global>
    @import '../styles/globals.css';

    html,
    body {
        margin: 0;
        width: 100%;
        height: 100%;
    }

    [x-cloak] {
        display: none !important;
    }
</style>
