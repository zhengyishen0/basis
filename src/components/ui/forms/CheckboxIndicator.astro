---
import { cn } from '@/lib/utils';
import { createUIComponent, type UIComponentProps, type VariantProps } from '@/lib/component-variants';

const checkboxIndicatorVariants = createUIComponent(
    'relative flex items-center justify-center shrink-0 transform-gpu rounded bg-background transition-all duration-300 ease-out h-5 w-5 border border-primary',
    {
        size: {
            sm: 'h-4 w-4 rounded-sm',
            md: 'h-5 w-5 rounded',
            lg: 'h-6 w-6 rounded-md',
        },
        state: {
            default: '',
            checked: 'bg-primary border-primary scale-105',
            indeterminate: 'bg-primary border-primary scale-105',
            disabled: 'opacity-50 cursor-not-allowed',
        }
    }
);

export interface Props extends UIComponentProps, VariantProps<typeof checkboxIndicatorVariants> {
    checked?: boolean;
    indeterminate?: boolean;
    disabled?: boolean;
    size?: 'sm' | 'md' | 'lg';
    name?: string;
    value?: string;
}

const {
    checked = false,
    indeterminate = false,
    disabled = false,
    size = 'md',
    name,
    value,
    padding,
    elevation,
    class: className,
    ...alpineProps
} = Astro.props;

const checkSizes = {
    sm: 'h-2 w-2',
    md: 'h-3 w-3', 
    lg: 'h-4 w-4'
};
---

<!-- 
CheckboxIndicator Component

A reusable checkbox visual indicator that can be used in various contexts.

Usage:
<CheckboxIndicator checked={true} />
<CheckboxIndicator :checked="isSelected" />
<CheckboxIndicator indeterminate={true} />
<CheckboxIndicator disabled={true} />

Features:
- Multiple sizes (sm, md, lg)
- Checked/unchecked/indeterminate states
- Smooth transitions and animations
- Disabled state styling
- Alpine.js reactive support
-->

<div
    class="checkbox-input-wrapper relative"
    {...alpineProps}
>
    <div
        class={cn(
            checkboxIndicatorVariants({ size, padding, elevation }),
            className
        )}
        :class={`[
            checked || indeterminate ? 'bg-primary border-primary scale-105' : 'bg-background border-primary',
            disabled ? 'opacity-50 cursor-not-allowed' : 'group-hover:border-primary/80'
        ]`}
    >
        <!-- Checkmark icon -->
        <div
            class="text-primary-foreground transition-all duration-300 ease-out transform-gpu"
            :class={`checked ? 'opacity-100 scale-100' : 'opacity-0 scale-0'`}
            x-show="!indeterminate"
        >
            <!-- SVG Checkmark -->
            <svg 
                class={cn('stroke-current', checkSizes[size])} 
                viewBox="0 0 16 16" 
                fill="none" 
                xmlns="http://www.w3.org/2000/svg"
            >
                <path 
                    d="M13.5 4.5L6 12L2.5 8.5" 
                    stroke="currentColor" 
                    stroke-width="2" 
                    stroke-linecap="round" 
                    stroke-linejoin="round"
                />
            </svg>
        </div>
        
        <!-- Indeterminate indicator -->
        <div
            class="text-primary-foreground transition-all duration-300 ease-out transform-gpu"
            :class={`indeterminate ? 'opacity-100 scale-100' : 'opacity-0 scale-0'`}
            x-show="indeterminate"
        >
            <!-- Horizontal line for indeterminate -->
            <div class={cn('bg-current rounded-full h-0.5', size === 'sm' ? 'w-2' : size === 'lg' ? 'w-4' : 'w-3')}></div>
        </div>
    </div>
</div>