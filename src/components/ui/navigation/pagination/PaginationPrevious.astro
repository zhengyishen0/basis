---
import { cn } from '@/lib/utils';
import { ChevronLeft } from 'lucide-astro';

export interface Props {
  disabled?: boolean;
  class?: string;
  [key: string]: any;
}

const {
  disabled = false,
  class: className,
  ...alpineProps
} = Astro.props;
---

<button
  class={cn(
    "inline-flex items-center justify-center px-3 py-2 text-sm font-medium rounded-md border border-input bg-background hover:bg-accent hover:text-accent-foreground disabled:opacity-50 disabled:cursor-not-allowed",
    className
  )}
  x-on:click="previousPage()"
  x-bind:disabled="!hasPrevious"
  disabled={disabled}
  {...alpineProps}
>
  <ChevronLeft class="w-4 h-4 mr-1" />
  <slot>Previous</slot>
</button>