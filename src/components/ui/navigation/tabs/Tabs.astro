---
import { cva, type VariantProps } from 'class-variance-authority';
import { cn } from '@/lib/utils';
import { sizes, overflowVariants } from '@/lib/component-variants';

const tabsVariants = cva('w-full flex gap-2', {
    variants: {
        orientation: {
            horizontal: 'flex-col',
            vertical: 'flex-row',
        },
        size: sizes,
        overflow: overflowVariants,
    },
});

export interface Props extends VariantProps<typeof tabsVariants> {
    defaultValue?: string;
    class?: string;
    [key: string]: any; // Alpine.js pass-through
}

const {
    defaultValue,
    orientation = 'horizontal',
    size = 'md',
    overflow = 'fixed',
    class: className,
    ...alpineProps
} = Astro.props;
---

<div
    x-data={`{
    selectedTab: '${defaultValue}',
    orientation: '${orientation}'
  }`}
    class={cn(
        tabsVariants({
            orientation,
            size,
            overflow,
        }),
        className
    )}
    data-orientation={orientation}
    {...alpineProps}
>
    <slot />
</div>
