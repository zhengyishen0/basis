---
import { cn } from '@/lib/utils';

export interface Props {
  shortcut?: string;
  class?: string;
  [key: string]: any;
}

const { shortcut, class: className, ...alpineProps } = Astro.props;

const classes = cn(
  'ml-auto text-xs tracking-widest text-muted-foreground',
  className
);

// Extract Alpine.js directives
const { 'x-text': xText, 'x-if': xIf, ...restProps } = alpineProps;
---

<template x-if="(typeof item !== 'undefined' && item?.shortcut) || (typeof shortcut !== 'undefined' && shortcut)">
  <span class={classes} x-text="(typeof item !== 'undefined' && item?.shortcut) || (typeof shortcut !== 'undefined' && shortcut) || ''" {...restProps}></span>
</template>