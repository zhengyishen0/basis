---
import { cn } from '@/lib/utils';

export interface Props {
    className?: string;
    [key: string]: any;
}

const { className, ...alpineProps } = Astro.props;
---

<span
    class={cn(
        'ml-auto text-xs tracking-widest opacity-60',
        className
    )}
    {...alpineProps}
>
    <slot />
</span>