---
import { cva, type VariantProps } from 'class-variance-authority';
import { cn } from '@/lib/utils';
import { universalVariants, type UniversalSpacing } from '@/lib/component-variants';

const footerVariants = cva('flex items-center min-h-16', {
    variants: {
        justify: {
            start: 'justify-start',
            end: 'justify-end',
            center: 'justify-center',
            between: 'justify-between',
        },
        gap: {
            sm: 'gap-2',
            md: 'gap-4',
            lg: 'gap-6',
        },
    },
    defaultVariants: { justify: 'end', gap: 'sm' },
});

export interface Props extends VariantProps<typeof footerVariants> {
    padding?: UniversalSpacing;
    className?: string;
    [key: string]: any;
}

const { 
    justify = 'end', 
    gap = 'sm', 
    padding = 'lg', 
    className, 
    ...alpineProps 
} = Astro.props;
---

<footer 
    class={cn(
        footerVariants({ justify, gap }),
        universalVariants.padding[padding],
        className
    )}
    {...alpineProps}
>
    <slot />
</footer>