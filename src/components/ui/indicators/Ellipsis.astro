---
import { cn } from '@/lib/utils';
import { MoreHorizontal } from 'lucide-astro';

export interface Props {
  class?: string;
  [key: string]: any;
}

const {
  class: className,
  ...alpineProps
} = Astro.props;
---

<span
  role="presentation"
  aria-hidden="true"
  class={cn("flex h-9 w-9 items-center justify-center cursor-pointer hover:bg-muted rounded-md transition-colors", className)}
  {...alpineProps}
>
  <MoreHorizontal class="h-4 w-4" />
  <span class="sr-only">More breadcrumb items</span>
</span>