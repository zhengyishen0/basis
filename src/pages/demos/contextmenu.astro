---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/pine/Card.astro';
import Button from '../../components/pine/Button.astro';
import Badge from '../../components/pine/Badge.astro';
import ContextMenu from '../../components/pine/ContextMenu.astro';
---

<Layout title="ContextMenu Component Test">
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">ContextMenu Component Test</h1>
      <div class="flex justify-center gap-2 mb-6">
        <Button href="/test" variant="outline" color="neutral">â† Back to Test Suite</Button>
        <Button href="/test/all" variant="ghost" color="neutral">View All</Button>
      </div>
    </div>

    <!-- Basic Context Menu -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Basic Context Menu</h2>
        <div class="space-y-4">
          <p class="text-gray-600">Right-click on the areas below to see context menus:</p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Document Context -->
            <ContextMenu>
              <div slot="trigger">
                <div class="p-6 border-2 border-dashed border-gray-300 rounded-lg text-center cursor-pointer hover:border-blue-500 transition-colors">
                  <div class="text-gray-600">
                    ğŸ“„ Right-click for document menu
                  </div>
                </div>
              </div>
              <div slot="menu">
                <div class="bg-white border border-gray-200 rounded-lg shadow-lg py-2 min-w-48">
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">ğŸ“– Open</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">âœï¸ Edit</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">ğŸ“‹ Copy</a>
                  <hr class="my-1">
                  <a href="#" class="block px-4 py-2 text-sm text-red-700 hover:bg-red-50">ğŸ—‘ï¸ Delete</a>
                </div>
              </div>
            </ContextMenu>

            <!-- Folder Context -->
            <ContextMenu>
              <div slot="trigger">
                <div class="p-6 border-2 border-dashed border-gray-300 rounded-lg text-center cursor-pointer hover:border-green-500 transition-colors">
                  <div class="text-gray-600">
                    ğŸ“ Right-click for folder menu
                  </div>
                </div>
              </div>
              <div slot="menu">
                <div class="bg-white border border-gray-200 rounded-lg shadow-lg py-2 min-w-48">
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">ğŸ“‚ Open Folder</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">ğŸ“„ New File</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">ğŸ“ New Folder</a>
                  <hr class="my-1">
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">ğŸ“‹ Paste</a>
                  <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">âš™ï¸ Properties</a>
                </div>
              </div>
            </ContextMenu>
          </div>
        </div>
      </div>
    </Card>

    <!-- Text Context Menu -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Text Context Menu</h2>
        <ContextMenu>
          <div slot="trigger">
            <p class="p-4 bg-gray-50 rounded-lg cursor-context-menu select-text">
              Right-click on this text to see a text editing context menu. You can select part of this text and right-click for more options.
            </p>
          </div>
          <div slot="menu">
            <div class="bg-white border border-gray-200 rounded-lg shadow-lg py-2 min-w-48">
              <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">âœ‚ï¸ Cut</a>
              <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">ğŸ“‹ Copy</a>
              <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">ğŸ“„ Paste</a>
              <hr class="my-1">
              <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">ğŸ” Select All</a>
              <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">ğŸ”— Copy Link</a>
            </div>
          </div>
        </ContextMenu>
      </div>
    </Card>

    <!-- Event Handling Demo -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Interactive Context Menu</h2>
        <div x-data="{ lastAction: 'None', actionCount: 0 }">
          <p class="mb-4">Last action: <span x-text="lastAction" class="font-bold text-blue-600"></span> (Total: <span x-text="actionCount"></span>)</p>
          
          <ContextMenu>
            <div slot="trigger">
              <div class="p-6 bg-gradient-to-r from-blue-50 to-purple-50 rounded-lg text-center cursor-pointer border border-blue-200">
                <div class="text-gray-700">
                  ğŸ¯ Right-click for interactive menu
                </div>
              </div>
            </div>
            <div slot="menu">
              <div class="bg-white border border-gray-200 rounded-lg shadow-lg py-2 min-w-48">
                <button x-on:click="lastAction = 'Save'; actionCount++" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">ğŸ’¾ Save</button>
                <button x-on:click="lastAction = 'Export'; actionCount++" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">ğŸ“¤ Export</button>
                <button x-on:click="lastAction = 'Share'; actionCount++" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">ğŸ”— Share</button>
                <hr class="my-1">
                <button x-on:click="lastAction = 'Settings'; actionCount++" class="block w-full text-left px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">âš™ï¸ Settings</button>
              </div>
            </div>
          </ContextMenu>
        </div>
      </div>
    </Card>

    <!-- Custom Styled Menu -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Custom Styled Menu</h2>
        <ContextMenu>
          <div slot="trigger">
            <div class="p-6 bg-gradient-to-r from-gray-900 to-gray-700 rounded-lg text-center cursor-pointer text-white">
              <div>ğŸŒ™ Dark theme context menu</div>
            </div>
          </div>
          <div slot="menu">
            <div class="bg-gray-800 border border-gray-600 rounded-lg shadow-lg py-2 min-w-48">
              <a href="#" class="block px-4 py-2 text-sm text-gray-200 hover:bg-gray-700">ğŸ¨ Theme Settings</a>
              <a href="#" class="block px-4 py-2 text-sm text-gray-200 hover:bg-gray-700">ğŸŒ Switch to Light</a>
              <a href="#" class="block px-4 py-2 text-sm text-gray-200 hover:bg-gray-700">ğŸ”§ Preferences</a>
              <hr class="my-1 border-gray-600">
              <a href="#" class="block px-4 py-2 text-sm text-gray-200 hover:bg-gray-700">â“ Help</a>
            </div>
          </div>
        </ContextMenu>
      </div>
    </Card>

    <!-- Status Summary -->
    <Card>
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Test Results</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">âœ“ Working</Badge>
            <p class="text-sm">Right-click activation</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">âœ“ Working</Badge>
            <p class="text-sm">Menu positioning</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">âœ“ Working</Badge>
            <p class="text-sm">Event handling</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">âœ“ Working</Badge>
            <p class="text-sm">Custom styling</p>
          </div>
        </div>
        
        <div class="mt-6 p-4 bg-blue-50 rounded-lg">
          <h3 class="font-semibold text-blue-800 mb-2">Testing Notes:</h3>
          <ul class="text-sm text-blue-700 space-y-1">
            <li>â€¢ Right-click on trigger areas to open context menus</li>
            <li>â€¢ Menus should appear near the cursor position</li>
            <li>â€¢ Click outside menu to close</li>
            <li>â€¢ Interactive menu buttons should update the counter</li>
          </ul>
        </div>
      </div>
    </Card>
  </main>
</Layout>