---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/pine/Card.astro';
import Button from '../../components/pine/Button.astro';
import Badge from '../../components/pine/Badge.astro';
import NavigationMenu from '../../components/pine/NavigationMenu.astro';
---

<Layout title="NavigationMenu Component Test">
  <main class="container mx-auto px-4 py-8 max-w-6xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">NavigationMenu Component Test</h1>
      <div class="flex justify-center gap-2 mb-6">
        <Button href="/test" variant="outline" color="neutral">← Back to Test Suite</Button>
        <Button href="/test/all" variant="ghost" color="neutral">View All</Button>
      </div>
    </div>

    <!-- Basic Horizontal Navigation -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Basic Horizontal Navigation</h2>
        <div class="space-y-6">
          <p class="text-neutral-600">Standard horizontal navigation with dropdown menus</p>
          
          <div class="border border-neutral-200 rounded-lg p-4 bg-white">
            <NavigationMenu orientation="horizontal" trigger="hover">
              <div slot="brand">
                <a href="/" class="flex items-center space-x-2">
                  <div class="w-8 h-8 bg-blue-600 rounded-lg flex items-center justify-center">
                    <span class="text-white font-bold text-sm">AC</span>
                  </div>
                  <span class="font-bold text-xl text-gray-900">Acme Corp</span>
                </a>
              </div>
              
              <nav slot="menu">
                <ul class="flex space-x-6">
                  <li>
                    <a href="/" class="text-gray-700 hover:text-gray-900 transition-colors">Home</a>
                  </li>
                  <li x-data="{ open: false }" @mouseenter="open = true" @mouseleave="open = false" class="relative">
                    <button class="text-gray-700 hover:text-gray-900 flex items-center transition-colors">
                      Products
                      <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                      </svg>
                    </button>
                    <div x-show="open" x-transition class="absolute top-full left-0 mt-2 w-48 bg-white border border-gray-200 rounded-md shadow-lg z-50">
                      <a href="/products/web" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Web Applications</a>
                      <a href="/products/mobile" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Mobile Apps</a>
                      <a href="/products/desktop" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Desktop Software</a>
                      <hr class="my-1 border-gray-200">
                      <a href="/products/enterprise" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Enterprise Solutions</a>
                    </div>
                  </li>
                  <li x-data="{ open: false }" @mouseenter="open = true" @mouseleave="open = false" class="relative">
                    <button class="text-gray-700 hover:text-gray-900 flex items-center transition-colors">
                      Solutions
                      <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                      </svg>
                    </button>
                    <div x-show="open" x-transition class="absolute top-full left-0 mt-2 w-64 bg-white border border-gray-200 rounded-md shadow-lg z-50">
                      <div class="p-4">
                        <div class="space-y-3">
                          <a href="/solutions/ecommerce" class="flex items-center space-x-3 p-2 rounded hover:bg-gray-50">
                            <div class="w-8 h-8 bg-green-100 rounded flex items-center justify-center">
                              <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M3 4a1 1 0 011-1h12a1 1 0 011 1v2a1 1 0 01-1 1H4a1 1 0 01-1-1V4zM3 10a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H4a1 1 0 01-1-1v-6zM14 9a1 1 0 00-1 1v6a1 1 0 001 1h2a1 1 0 001-1v-6a1 1 0 00-1-1h-2z"></path>
                              </svg>
                            </div>
                            <div>
                              <div class="font-medium text-gray-900">E-commerce</div>
                              <div class="text-sm text-gray-500">Online store solutions</div>
                            </div>
                          </a>
                          <a href="/solutions/analytics" class="flex items-center space-x-3 p-2 rounded hover:bg-gray-50">
                            <div class="w-8 h-8 bg-blue-100 rounded flex items-center justify-center">
                              <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                                <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"></path>
                              </svg>
                            </div>
                            <div>
                              <div class="font-medium text-gray-900">Analytics</div>
                              <div class="text-sm text-gray-500">Data insights platform</div>
                            </div>
                          </a>
                        </div>
                      </div>
                    </div>
                  </li>
                  <li>
                    <a href="/about" class="text-gray-700 hover:text-gray-900 transition-colors">About</a>
                  </li>
                  <li>
                    <a href="/contact" class="text-gray-700 hover:text-gray-900 transition-colors">Contact</a>
                  </li>
                </ul>
              </nav>
              
              <div slot="actions">
                <div class="flex items-center space-x-3">
                  <a href="/login" class="text-gray-700 hover:text-gray-900 transition-colors">Sign In</a>
                  <button class="bg-blue-600 text-white px-4 py-2 rounded-md hover:bg-blue-700 transition-colors">
                    Get Started
                  </button>
                </div>
              </div>
            </NavigationMenu>
          </div>
        </div>
      </div>
    </Card>

    <!-- Click Trigger Navigation -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Click Trigger Navigation</h2>
        <div class="space-y-6">
          <p class="text-neutral-600">Navigation menu with click-to-open dropdowns</p>
          
          <div class="border border-neutral-200 rounded-lg p-4 bg-white">
            <NavigationMenu orientation="horizontal" trigger="click">
              <div slot="brand">
                <a href="/" class="flex items-center space-x-2">
                  <div class="w-8 h-8 bg-purple-600 rounded-lg flex items-center justify-center">
                    <span class="text-white font-bold text-sm">TC</span>
                  </div>
                  <span class="font-bold text-xl text-gray-900">TechCorp</span>
                </a>
              </div>
              
              <nav slot="menu">
                <div x-data="{ activeDropdown: null }">
                  <ul class="flex space-x-6">
                    <li>
                      <a href="/" class="text-gray-700 hover:text-gray-900 transition-colors">Dashboard</a>
                    </li>
                    <li class="relative">
                      <button 
                        @click="activeDropdown = activeDropdown === 'services' ? null : 'services'"
                        class="text-gray-700 hover:text-gray-900 flex items-center transition-colors"
                      >
                        Services
                        <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                      </button>
                      <div x-show="activeDropdown === 'services'" x-transition class="absolute top-full left-0 mt-2 w-56 bg-white border border-gray-200 rounded-md shadow-lg z-50">
                        <div class="p-2">
                          <a href="/services/consulting" class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded">Consulting</a>
                          <a href="/services/development" class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded">Development</a>
                          <a href="/services/design" class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded">Design</a>
                          <a href="/services/support" class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded">Support</a>
                        </div>
                      </div>
                    </li>
                    <li class="relative">
                      <button 
                        @click="activeDropdown = activeDropdown === 'resources' ? null : 'resources'"
                        class="text-gray-700 hover:text-gray-900 flex items-center transition-colors"
                      >
                        Resources
                        <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                      </button>
                      <div x-show="activeDropdown === 'resources'" x-transition class="absolute top-full left-0 mt-2 w-48 bg-white border border-gray-200 rounded-md shadow-lg z-50">
                        <div class="p-2">
                          <a href="/blog" class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded">Blog</a>
                          <a href="/docs" class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded">Documentation</a>
                          <a href="/tutorials" class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded">Tutorials</a>
                          <a href="/community" class="block px-3 py-2 text-sm text-gray-700 hover:bg-gray-100 rounded">Community</a>
                        </div>
                      </div>
                    </li>
                    <li>
                      <a href="/pricing" class="text-gray-700 hover:text-gray-900 transition-colors">Pricing</a>
                    </li>
                  </ul>
                </div>
              </nav>
              
              <div slot="actions">
                <div class="flex items-center space-x-3">
                  <button class="text-gray-700 hover:text-gray-900 transition-colors">Login</button>
                  <button class="bg-purple-600 text-white px-4 py-2 rounded-md hover:bg-purple-700 transition-colors">
                    Try Free
                  </button>
                </div>
              </div>
            </NavigationMenu>
          </div>
        </div>
      </div>
    </Card>

    <!-- Responsive Navigation -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Responsive Navigation</h2>
        <div class="space-y-6">
          <p class="text-neutral-600">Mobile-responsive navigation with hamburger menu</p>
          <p class="text-sm text-blue-600">Resize your browser window to see the mobile menu</p>
          
          <div class="border border-neutral-200 rounded-lg p-4 bg-white">
            <NavigationMenu responsive={true} trigger="hover">
              <div slot="brand">
                <a href="/" class="flex items-center space-x-2">
                  <div class="w-8 h-8 bg-green-600 rounded-lg flex items-center justify-center">
                    <span class="text-white font-bold text-sm">RS</span>
                  </div>
                  <span class="font-bold text-xl text-gray-900">ResponsiveSite</span>
                </a>
              </div>
              
              <nav slot="menu">
                <ul class="flex space-x-6">
                  <li>
                    <a href="/" class="text-gray-700 hover:text-gray-900 transition-colors">Home</a>
                  </li>
                  <li x-data="{ open: false }" @mouseenter="open = true" @mouseleave="open = false" class="relative">
                    <button class="text-gray-700 hover:text-gray-900 flex items-center transition-colors">
                      Features
                      <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                      </svg>
                    </button>
                    <div x-show="open" x-transition class="absolute top-full left-0 mt-2 w-64 bg-white border border-gray-200 rounded-md shadow-lg z-50">
                      <div class="p-4 grid grid-cols-1 gap-3">
                        <a href="/features/responsive" class="block p-2 rounded hover:bg-gray-50">
                          <div class="font-medium text-gray-900">Responsive Design</div>
                          <div class="text-sm text-gray-500">Works on all devices</div>
                        </a>
                        <a href="/features/fast" class="block p-2 rounded hover:bg-gray-50">
                          <div class="font-medium text-gray-900">Fast Loading</div>
                          <div class="text-sm text-gray-500">Optimized performance</div>
                        </a>
                        <a href="/features/secure" class="block p-2 rounded hover:bg-gray-50">
                          <div class="font-medium text-gray-900">Secure</div>
                          <div class="text-sm text-gray-500">Enterprise security</div>
                        </a>
                      </div>
                    </div>
                  </li>
                  <li>
                    <a href="/pricing" class="text-gray-700 hover:text-gray-900 transition-colors">Pricing</a>
                  </li>
                  <li>
                    <a href="/support" class="text-gray-700 hover:text-gray-900 transition-colors">Support</a>
                  </li>
                </ul>
              </nav>
              
              <div slot="actions">
                <div class="flex items-center space-x-3">
                  <a href="/login" class="text-gray-700 hover:text-gray-900 transition-colors">Sign In</a>
                  <button class="bg-green-600 text-white px-4 py-2 rounded-md hover:bg-green-700 transition-colors">
                    Start Free Trial
                  </button>
                </div>
              </div>
              
              <nav slot="mobile-menu">
                <div class="px-2 pt-2 pb-3 space-y-1">
                  <a href="/" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Home</a>
                  <div x-data="{ open: false }">
                    <button @click="open = !open" class="w-full text-left flex justify-between items-center px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">
                      Features
                      <svg :class="{'rotate-180': open}" class="w-4 h-4 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                      </svg>
                    </button>
                    <div x-show="open" x-transition class="pl-6 space-y-1">
                      <a href="/features/responsive" class="block px-3 py-2 rounded-md text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-50">Responsive Design</a>
                      <a href="/features/fast" class="block px-3 py-2 rounded-md text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-50">Fast Loading</a>
                      <a href="/features/secure" class="block px-3 py-2 rounded-md text-sm text-gray-600 hover:text-gray-900 hover:bg-gray-50">Secure</a>
                    </div>
                  </div>
                  <a href="/pricing" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Pricing</a>
                  <a href="/support" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Support</a>
                </div>
              </nav>
              
              <div slot="mobile-actions">
                <a href="/login" class="block px-3 py-2 rounded-md text-base font-medium text-gray-700 hover:text-gray-900 hover:bg-gray-50">Sign In</a>
                <button class="w-full text-left block px-3 py-2 rounded-md text-base font-medium text-green-600 hover:text-green-500 hover:bg-gray-50">
                  Start Free Trial
                </button>
              </div>
            </NavigationMenu>
          </div>
        </div>
      </div>
    </Card>

    <!-- Mega Menu Example -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Mega Menu Navigation</h2>
        <div class="space-y-6">
          <p class="text-neutral-600">Advanced navigation with mega menu dropdown</p>
          
          <div class="border border-neutral-200 rounded-lg p-4 bg-white">
            <NavigationMenu orientation="horizontal" trigger="hover">
              <div slot="brand">
                <a href="/" class="flex items-center space-x-2">
                  <div class="w-8 h-8 bg-indigo-600 rounded-lg flex items-center justify-center">
                    <span class="text-white font-bold text-sm">MM</span>
                  </div>
                  <span class="font-bold text-xl text-gray-900">MegaMenu</span>
                </a>
              </div>
              
              <nav slot="menu">
                <div x-data="{ activeMenu: null }">
                  <ul class="flex space-x-6">
                    <li>
                      <a href="/" class="text-gray-700 hover:text-gray-900 transition-colors">Home</a>
                    </li>
                    <li class="relative">
                      <button 
                        @mouseenter="activeMenu = 'products'"
                        @mouseleave="activeMenu = null"
                        class="text-gray-700 hover:text-gray-900 flex items-center transition-colors"
                      >
                        Products
                        <svg class="ml-1 w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
                        </svg>
                      </button>
                      <div 
                        x-show="activeMenu === 'products'"
                        @mouseenter="activeMenu = 'products'"
                        @mouseleave="activeMenu = null"
                        x-transition
                        class="absolute top-full left-0 mt-2 w-96 bg-white border border-gray-200 rounded-lg shadow-xl z-50"
                      >
                        <div class="p-6">
                          <div class="grid grid-cols-2 gap-6">
                            <div>
                              <h3 class="font-semibold text-gray-900 mb-3">Development Tools</h3>
                              <div class="space-y-2">
                                <a href="/products/ide" class="flex items-center space-x-3 p-2 rounded hover:bg-gray-50">
                                  <div class="w-8 h-8 bg-blue-100 rounded flex items-center justify-center">
                                    <svg class="w-4 h-4 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                                      <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
                                    </svg>
                                  </div>
                                  <div>
                                    <div class="text-sm font-medium text-gray-900">Code Editor</div>
                                    <div class="text-xs text-gray-500">Advanced IDE</div>
                                  </div>
                                </a>
                                <a href="/products/debugger" class="flex items-center space-x-3 p-2 rounded hover:bg-gray-50">
                                  <div class="w-8 h-8 bg-red-100 rounded flex items-center justify-center">
                                    <svg class="w-4 h-4 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                                      <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                                    </svg>
                                  </div>
                                  <div>
                                    <div class="text-sm font-medium text-gray-900">Debugger</div>
                                    <div class="text-xs text-gray-500">Debug tools</div>
                                  </div>
                                </a>
                              </div>
                            </div>
                            <div>
                              <h3 class="font-semibold text-gray-900 mb-3">Design Tools</h3>
                              <div class="space-y-2">
                                <a href="/products/designer" class="flex items-center space-x-3 p-2 rounded hover:bg-gray-50">
                                  <div class="w-8 h-8 bg-purple-100 rounded flex items-center justify-center">
                                    <svg class="w-4 h-4 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                                      <path fill-rule="evenodd" d="M4 3a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V5a2 2 0 00-2-2H4zm12 12H4l4-8 3 6 2-4 3 6z" clip-rule="evenodd"></path>
                                    </svg>
                                  </div>
                                  <div>
                                    <div class="text-sm font-medium text-gray-900">UI Designer</div>
                                    <div class="text-xs text-gray-500">Design interfaces</div>
                                  </div>
                                </a>
                                <a href="/products/prototyper" class="flex items-center space-x-3 p-2 rounded hover:bg-gray-50">
                                  <div class="w-8 h-8 bg-green-100 rounded flex items-center justify-center">
                                    <svg class="w-4 h-4 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                                      <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                  </div>
                                  <div>
                                    <div class="text-sm font-medium text-gray-900">Prototyper</div>
                                    <div class="text-xs text-gray-500">Create prototypes</div>
                                  </div>
                                </a>
                              </div>
                            </div>
                          </div>
                          <div class="mt-6 pt-4 border-t border-gray-200">
                            <a href="/products" class="text-sm text-indigo-600 hover:text-indigo-500">
                              View all products →
                            </a>
                          </div>
                        </div>
                      </div>
                    </li>
                    <li>
                      <a href="/about" class="text-gray-700 hover:text-gray-900 transition-colors">About</a>
                    </li>
                    <li>
                      <a href="/contact" class="text-gray-700 hover:text-gray-900 transition-colors">Contact</a>
                    </li>
                  </ul>
                </div>
              </nav>
              
              <div slot="actions">
                <div class="flex items-center space-x-3">
                  <a href="/login" class="text-gray-700 hover:text-gray-900 transition-colors">Sign In</a>
                  <button class="bg-indigo-600 text-white px-4 py-2 rounded-md hover:bg-indigo-700 transition-colors">
                    Get Started
                  </button>
                </div>
              </div>
            </NavigationMenu>
          </div>
        </div>
      </div>
    </Card>

    <!-- Interactive Demo -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Interactive Demo</h2>
        <div x-data="{ 
          orientation: 'horizontal',
          trigger: 'hover',
          responsive: true
        }">
          <div class="space-y-4 mb-6">
            <div class="flex flex-wrap gap-4">
              <div class="flex items-center gap-2">
                <label class="text-sm font-medium">Orientation:</label>
                <select x-model="orientation" class="rounded border-neutral-300 text-sm px-2 py-1">
                  <option value="horizontal">Horizontal</option>
                  <option value="vertical">Vertical</option>
                </select>
              </div>
              
              <div class="flex items-center gap-2">
                <label class="text-sm font-medium">Trigger:</label>
                <select x-model="trigger" class="rounded border-neutral-300 text-sm px-2 py-1">
                  <option value="hover">Hover</option>
                  <option value="click">Click</option>
                </select>
              </div>
              
              <div class="flex items-center gap-2">
                <label class="text-sm font-medium">Responsive:</label>
                <input 
                  type="checkbox" 
                  x-model="responsive"
                  class="rounded border-neutral-300 text-blue-600 focus:ring-blue-500"
                >
              </div>
            </div>
          </div>
          
          <div class="p-4 bg-neutral-50 rounded-lg">
            <p class="text-sm font-medium mb-2">Current Configuration:</p>
            <p class="text-xs text-neutral-600 mb-3">
              Orientation: <span x-text="orientation"></span> | 
              Trigger: <span x-text="trigger"></span> | 
              Responsive: <span x-text="responsive ? 'Yes' : 'No'"></span>
            </p>
            
            <!-- Note: This shows a static example since we can't dynamically change Astro props -->
            <div class="border border-neutral-200 rounded-lg p-4 bg-white">
              <NavigationMenu orientation="horizontal" trigger="hover" responsive={true}>
