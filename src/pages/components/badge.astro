---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/pine/Card.astro';
import Button from '../../components/pine/Button.astro';
import Badge from '../../components/pine/Badge.astro';
---

<Layout title="Badge Component Test">
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">Badge Component Test</h1>
      <div class="flex justify-center gap-2 mb-6">
        <Button href="/test" variant="outline" color="neutral">‚Üê Back to Test Suite</Button>
        <Button href="/test/all" variant="ghost" color="neutral">View All</Button>
      </div>
    </div>

    <!-- Solid Variant Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Solid Variant</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div>
            <h3 class="text-lg font-semibold mb-3">Small</h3>
            <div class="flex flex-wrap gap-2">
              <Badge variant="solid" color="black" size="sm">Black</Badge>
              <Badge variant="solid" color="blue" size="sm">Blue</Badge>
              <Badge variant="solid" color="red" size="sm">Red</Badge>
              <Badge variant="solid" color="green" size="sm">Green</Badge>
              <Badge variant="solid" color="yellow" size="sm">Yellow</Badge>
              <Badge variant="solid" color="purple" size="sm">Purple</Badge>
              <Badge variant="solid" color="pink" size="sm">Pink</Badge>
              <Badge variant="solid" color="gray" size="sm">Gray</Badge>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Medium</h3>
            <div class="flex flex-wrap gap-2">
              <Badge variant="solid" color="black" size="md">Black</Badge>
              <Badge variant="solid" color="blue" size="md">Blue</Badge>
              <Badge variant="solid" color="red" size="md">Red</Badge>
              <Badge variant="solid" color="green" size="md">Green</Badge>
              <Badge variant="solid" color="yellow" size="md">Yellow</Badge>
              <Badge variant="solid" color="purple" size="md">Purple</Badge>
              <Badge variant="solid" color="pink" size="md">Pink</Badge>
              <Badge variant="solid" color="gray" size="md">Gray</Badge>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Large</h3>
            <div class="flex flex-wrap gap-2">
              <Badge variant="solid" color="black" size="lg">Black</Badge>
              <Badge variant="solid" color="blue" size="lg">Blue</Badge>
              <Badge variant="solid" color="red" size="lg">Red</Badge>
              <Badge variant="solid" color="green" size="lg">Green</Badge>
              <Badge variant="solid" color="yellow" size="lg">Yellow</Badge>
              <Badge variant="solid" color="purple" size="lg">Purple</Badge>
              <Badge variant="solid" color="pink" size="lg">Pink</Badge>
              <Badge variant="solid" color="gray" size="lg">Gray</Badge>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Usage Examples</h3>
            <div class="space-y-2">
              <div>New <Badge variant="solid" color="blue" size="sm">5</Badge></div>
              <div>Messages <Badge variant="solid" color="red" size="sm">12</Badge></div>
              <div>Status <Badge variant="solid" color="green" size="sm">Online</Badge></div>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Soft Variant Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Soft Variant</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div>
            <h3 class="text-lg font-semibold mb-3">Small</h3>
            <div class="flex flex-wrap gap-2">
              <Badge variant="soft" color="black" size="sm">Black</Badge>
              <Badge variant="soft" color="blue" size="sm">Blue</Badge>
              <Badge variant="soft" color="red" size="sm">Red</Badge>
              <Badge variant="soft" color="green" size="sm">Green</Badge>
              <Badge variant="soft" color="yellow" size="sm">Yellow</Badge>
              <Badge variant="soft" color="purple" size="sm">Purple</Badge>
              <Badge variant="soft" color="pink" size="sm">Pink</Badge>
              <Badge variant="soft" color="gray" size="sm">Gray</Badge>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Medium</h3>
            <div class="flex flex-wrap gap-2">
              <Badge variant="soft" color="black" size="md">Black</Badge>
              <Badge variant="soft" color="blue" size="md">Blue</Badge>
              <Badge variant="soft" color="red" size="md">Red</Badge>
              <Badge variant="soft" color="green" size="md">Green</Badge>
              <Badge variant="soft" color="yellow" size="md">Yellow</Badge>
              <Badge variant="soft" color="purple" size="md">Purple</Badge>
              <Badge variant="soft" color="pink" size="md">Pink</Badge>
              <Badge variant="soft" color="gray" size="md">Gray</Badge>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Large</h3>
            <div class="flex flex-wrap gap-2">
              <Badge variant="soft" color="black" size="lg">Black</Badge>
              <Badge variant="soft" color="blue" size="lg">Blue</Badge>
              <Badge variant="soft" color="red" size="lg">Red</Badge>
              <Badge variant="soft" color="green" size="lg">Green</Badge>
              <Badge variant="soft" color="yellow" size="lg">Yellow</Badge>
              <Badge variant="soft" color="purple" size="lg">Purple</Badge>
              <Badge variant="soft" color="pink" size="lg">Pink</Badge>
              <Badge variant="soft" color="gray" size="lg">Gray</Badge>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Usage Examples</h3>
            <div class="space-y-2">
              <div>Draft <Badge variant="soft" color="gray" size="sm">3</Badge></div>
              <div>Warning <Badge variant="soft" color="yellow" size="sm">!</Badge></div>
              <div>Success <Badge variant="soft" color="green" size="sm">‚úì</Badge></div>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Outline Variant Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Outline Variant</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div>
            <h3 class="text-lg font-semibold mb-3">Small</h3>
            <div class="flex flex-wrap gap-2">
              <Badge variant="outline" color="black" size="sm">Black</Badge>
              <Badge variant="outline" color="blue" size="sm">Blue</Badge>
              <Badge variant="outline" color="red" size="sm">Red</Badge>
              <Badge variant="outline" color="green" size="sm">Green</Badge>
              <Badge variant="outline" color="yellow" size="sm">Yellow</Badge>
              <Badge variant="outline" color="purple" size="sm">Purple</Badge>
              <Badge variant="outline" color="pink" size="sm">Pink</Badge>
              <Badge variant="outline" color="gray" size="sm">Gray</Badge>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Medium</h3>
            <div class="flex flex-wrap gap-2">
              <Badge variant="outline" color="black" size="md">Black</Badge>
              <Badge variant="outline" color="blue" size="md">Blue</Badge>
              <Badge variant="outline" color="red" size="md">Red</Badge>
              <Badge variant="outline" color="green" size="md">Green</Badge>
              <Badge variant="outline" color="yellow" size="md">Yellow</Badge>
              <Badge variant="outline" color="purple" size="md">Purple</Badge>
              <Badge variant="outline" color="pink" size="md">Pink</Badge>
              <Badge variant="outline" color="gray" size="md">Gray</Badge>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Large</h3>
            <div class="flex flex-wrap gap-2">
              <Badge variant="outline" color="black" size="lg">Black</Badge>
              <Badge variant="outline" color="blue" size="lg">Blue</Badge>
              <Badge variant="outline" color="red" size="lg">Red</Badge>
              <Badge variant="outline" color="green" size="lg">Green</Badge>
              <Badge variant="outline" color="yellow" size="lg">Yellow</Badge>
              <Badge variant="outline" color="purple" size="lg">Purple</Badge>
              <Badge variant="outline" color="pink" size="lg">Pink</Badge>
              <Badge variant="outline" color="gray" size="lg">Gray</Badge>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Usage Examples</h3>
            <div class="space-y-2">
              <div>Tag <Badge variant="outline" color="blue" size="sm">React</Badge></div>
              <div>Category <Badge variant="outline" color="purple" size="sm">Frontend</Badge></div>
              <div>Version <Badge variant="outline" color="green" size="sm">v2.1</Badge></div>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Dot Variant Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Dot Variant</h2>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
          <div>
            <h3 class="text-lg font-semibold mb-3">Small</h3>
            <div class="flex flex-wrap gap-2">
              <Badge variant="dot" color="black" size="sm">Black</Badge>
              <Badge variant="dot" color="blue" size="sm">Blue</Badge>
              <Badge variant="dot" color="red" size="sm">Red</Badge>
              <Badge variant="dot" color="green" size="sm">Green</Badge>
              <Badge variant="dot" color="yellow" size="sm">Yellow</Badge>
              <Badge variant="dot" color="purple" size="sm">Purple</Badge>
              <Badge variant="dot" color="pink" size="sm">Pink</Badge>
              <Badge variant="dot" color="gray" size="sm">Gray</Badge>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Medium</h3>
            <div class="flex flex-wrap gap-2">
              <Badge variant="dot" color="black" size="md">Black</Badge>
              <Badge variant="dot" color="blue" size="md">Blue</Badge>
              <Badge variant="dot" color="red" size="md">Red</Badge>
              <Badge variant="dot" color="green" size="md">Green</Badge>
              <Badge variant="dot" color="yellow" size="md">Yellow</Badge>
              <Badge variant="dot" color="purple" size="md">Purple</Badge>
              <Badge variant="dot" color="pink" size="md">Pink</Badge>
              <Badge variant="dot" color="gray" size="md">Gray</Badge>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Large</h3>
            <div class="flex flex-wrap gap-2">
              <Badge variant="dot" color="black" size="lg">Black</Badge>
              <Badge variant="dot" color="blue" size="lg">Blue</Badge>
              <Badge variant="dot" color="red" size="lg">Red</Badge>
              <Badge variant="dot" color="green" size="lg">Green</Badge>
              <Badge variant="dot" color="yellow" size="lg">Yellow</Badge>
              <Badge variant="dot" color="purple" size="lg">Purple</Badge>
              <Badge variant="dot" color="pink" size="lg">Pink</Badge>
              <Badge variant="dot" color="gray" size="lg">Gray</Badge>
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-3">Usage Examples</h3>
            <div class="space-y-2">
              <div><Badge variant="dot" color="green" size="sm">Online</Badge></div>
              <div><Badge variant="dot" color="red" size="sm">Offline</Badge></div>
              <div><Badge variant="dot" color="yellow" size="sm">Away</Badge></div>
              <div><Badge variant="dot" color="blue" size="sm">Active</Badge></div>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Interactive Demo -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Interactive Demo</h2>
        <div x-data="{ 
          badgeText: 'Sample Badge',
          badgeVariant: 'solid',
          badgeColor: 'blue',
          badgeSize: 'md'
        }">
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 mb-6">
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Text</label>
              <input x-model="badgeText" type="text" class="w-full border border-gray-300 rounded-md px-3 py-2" />
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Variant</label>
              <select x-model="badgeVariant" class="w-full border border-gray-300 rounded-md px-3 py-2">
                <option value="solid">Solid</option>
                <option value="soft">Soft</option>
                <option value="outline">Outline</option>
                <option value="dot">Dot</option>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Color</label>
              <select x-model="badgeColor" class="w-full border border-gray-300 rounded-md px-3 py-2">
                <option value="black">Black</option>
                <option value="blue">Blue</option>
                <option value="red">Red</option>
                <option value="green">Green</option>
                <option value="yellow">Yellow</option>
                <option value="purple">Purple</option>
                <option value="pink">Pink</option>
                <option value="gray">Gray</option>
              </select>
            </div>
            
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-2">Size</label>
              <select x-model="badgeSize" class="w-full border border-gray-300 rounded-md px-3 py-2">
                <option value="sm">Small</option>
                <option value="md">Medium</option>
                <option value="lg">Large</option>
              </select>
            </div>
          </div>
          
          <div class="p-6 bg-gray-50 rounded-lg text-center">
            <h3 class="text-lg font-semibold mb-4">Preview</h3>
            <Badge 
              :variant="badgeVariant"
              :color="badgeColor"
              :size="badgeSize"
              x-text="badgeText"
            >
            </Badge>
          </div>
        </div>
      </div>
    </Card>

    <!-- Real-world Usage Examples -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Real-world Usage Examples</h2>
        <div class="space-y-6">
          <!-- User Profile -->
          <div class="flex items-center gap-4">
            <div class="w-12 h-12 bg-gray-300 rounded-full"></div>
            <div>
              <h3 class="font-semibold">John Doe <Badge variant="dot" color="green" size="sm">Online</Badge></h3>
              <p class="text-gray-600">Software Engineer <Badge variant="soft" color="blue" size="sm">Pro</Badge></p>
            </div>
          </div>
          
          <!-- Notification Item -->
          <div class="flex items-start gap-4 p-4 bg-gray-50 rounded-lg">
            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
              <span class="text-blue-600">üìß</span>
            </div>
            <div class="flex-1">
              <h4 class="font-semibold">New Message</h4>
              <p class="text-gray-600">You have a new message from Sarah</p>
            </div>
            <Badge variant="solid" color="red" size="sm">3</Badge>
          </div>
          
          <!-- Product Card -->
          <div class="border border-gray-200 rounded-lg p-4">
            <div class="flex justify-between items-start mb-2">
              <h4 class="font-semibold">Premium Plan</h4>
              <Badge variant="solid" color="green" size="sm">Popular</Badge>
            </div>
            <p class="text-gray-600 mb-4">Advanced features for power users</p>
            <div class="flex gap-2">
              <Badge variant="soft" color="blue" size="sm">Analytics</Badge>
              <Badge variant="soft" color="purple" size="sm">API Access</Badge>
              <Badge variant="soft" color="green" size="sm">Priority Support</Badge>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Status Summary -->
    <Card>
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Test Results</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">All variants render correctly</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">All colors available</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">Size variants working</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">‚úì Working</Badge>
            <p class="text-sm">Dot functionality</p>
          </div>
        </div>
      </div>
    </Card>
  </main>
</Layout>