---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/pine/Card.astro';
import Button from '../../components/pine/Button.astro';
import Badge from '../../components/pine/Badge.astro';
import Quotes from '../../components/pine/Quotes.astro';
---

<Layout title="Quotes Component Test">
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">Quotes Component Test</h1>
      <div class="flex justify-center gap-2 mb-6">
        <Button href="/test" variant="outline" color="neutral">← Back to Test Suite</Button>
        <Button href="/test/all" variant="ghost" color="neutral">View All</Button>
      </div>
    </div>

    <!-- Variants Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Variants</h2>
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">Default</h3>
            <Quotes 
              quote="This is an amazing product that has completely transformed our business operations and workflow efficiency."
              author="Sarah Johnson"
              role="CEO"
              company="TechCorp"
              variant="default"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-4">Centered</h3>
            <Quotes 
              quote="The user experience is outstanding. Our team productivity has increased by 200% since implementation."
              author="Michael Chen"
              role="CTO"
              company="InnovateNow"
              variant="centered"
            />
          </div>

          <div>
            <h3 class="text-lg font-semibold mb-4">Minimal</h3>
            <Quotes 
              quote="Simple, elegant, and effective. This solution exceeded all our expectations and delivered results immediately."
              author="Emily Davis"
              role="Product Manager"
              company="StartupXYZ"
              variant="minimal"
            />
          </div>
        </div>
      </div>
    </Card>

    <!-- Sizes Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Sizes</h2>
        <div class="space-y-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">Small (sm)</h3>
            <Quotes 
              quote="Great product with excellent support. Highly recommended for any business."
              author="John Smith"
              role="Director"
              company="BusinessCorp"
              size="sm"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-4">Medium (md) - Default</h3>
            <Quotes 
              quote="This platform has revolutionized how we handle our daily operations and customer interactions."
              author="Lisa Wang"
              role="Operations Manager"
              company="GrowthLabs"
              size="md"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-4">Large (lg)</h3>
            <Quotes 
              quote="An exceptional solution that delivers on every promise. The ROI has been incredible and the team loves using it."
              author="David Rodriguez"
              role="VP of Engineering"
              company="ScaleUp Inc"
              size="lg"
            />
          </div>
        </div>
      </div>
    </Card>

    <!-- Author Attribution Formats -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Author Attribution Formats</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">Author Only</h3>
            <Quotes 
              quote="Sometimes the simplest testimonials are the most powerful ones."
              author="Anonymous User"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-4">Author + Role</h3>
            <Quotes 
              quote="This tool has become indispensable for our development workflow."
              author="Alex Thompson"
              role="Senior Developer"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-4">Author + Company</h3>
            <Quotes 
              quote="Outstanding customer service and product quality that exceeds expectations."
              author="Maria Garcia"
              company="TechSolutions LLC"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-4">Author + Role + Company</h3>
            <Quotes 
              quote="The complete package - great features, excellent support, and reliable performance."
              author="Robert Kim"
              role="Head of Product"
              company="Digital Innovations"
            />
          </div>
        </div>
      </div>
    </Card>

    <!-- Quote Lengths -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Different Quote Lengths</h2>
        <div class="space-y-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">Short Quote</h3>
            <Quotes 
              quote="Perfect!"
              author="Happy Customer"
              variant="centered"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-4">Medium Quote</h3>
            <Quotes 
              quote="This product has significantly improved our team's efficiency and collaboration."
              author="Team Lead"
              role="Project Manager"
              company="Efficient Corp"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-4">Long Quote</h3>
            <Quotes 
              quote="We've been using this solution for over a year now, and I can confidently say it has transformed every aspect of our business operations. From streamlining our workflows to improving customer satisfaction, the impact has been remarkable. The support team is responsive, the features are intuitive, and the platform scales beautifully with our growing needs. I would recommend this to any organization looking to modernize their operations and achieve sustainable growth."
              author="Jennifer Adams"
              role="Chief Executive Officer"
              company="Enterprise Solutions Group"
              size="lg"
            />
          </div>
        </div>
      </div>
    </Card>

    <!-- Avatar Support -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Avatar Support</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">With Avatar (Default Layout)</h3>
            <Quotes 
              quote="The visual representation adds a personal touch to testimonials and builds trust."
              author="Profile User"
              role="UX Designer"
              company="Design Studio"
              avatar="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=400&h=400&fit=crop&crop=face"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-4">With Avatar (Centered Layout)</h3>
            <Quotes 
              quote="Centered layout with avatars creates a beautiful testimonial showcase."
              author="Design Expert"
              role="Creative Director"
              company="Visual Arts Co"
              avatar="https://images.unsplash.com/photo-1494790108755-2616b612b999?w=400&h=400&fit=crop&crop=face"
              variant="centered"
            />
          </div>
        </div>
        
        <div class="mt-8">
          <h3 class="text-lg font-semibold mb-4">Without Avatar</h3>
          <Quotes 
            quote="Clean testimonials without avatars maintain focus on the content and message."
            author="Anonymous Reviewer"
            role="Quality Specialist"
            company="Review Corp"
          />
        </div>
      </div>
    </Card>

    <!-- Custom Styling Examples -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Custom Styling Examples</h2>
        <div class="space-y-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">Custom Background</h3>
            <Quotes 
              quote="Custom styling allows for unique presentation that matches your brand identity."
              author="Brand Manager"
              role="Marketing Director"
              company="Brand Corp"
              class="bg-blue-50 p-6 rounded-lg border-2 border-blue-200"
              variant="centered"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-4">Shadow & Rounded</h3>
            <Quotes 
              quote="Enhanced visual appeal with shadows and rounded corners for modern aesthetics."
              author="UI Designer"
              role="Senior Designer"
              company="Modern Design Co"
              class="shadow-lg rounded-xl p-6 bg-white border"
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-4">Gradient Background</h3>
            <Quotes 
              quote="Beautiful gradient backgrounds can make testimonials stand out and capture attention."
              author="Visual Designer"
              role="Art Director"
              company="Creative Agency"
              class="bg-gradient-to-r from-purple-100 to-pink-100 p-6 rounded-lg"
              variant="centered"
            />
          </div>
        </div>
      </div>
    </Card>

    <!-- Interactive Examples -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Interactive Examples</h2>
        <div x-data="{ 
          currentQuote: 0,
          quotes: [
            {
              quote: 'This carousel demonstrates how quotes can be used in interactive components.',
              author: 'Interactive Demo',
              role: 'Test User',
              company: 'Demo Corp',
              avatar: 'https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&h=400&fit=crop&crop=face'
            },
            {
              quote: 'Rotating testimonials keep content fresh and engaging for visitors.',
              author: 'Marketing Expert',
              role: 'Growth Manager',
              company: 'Growth Labs',
              avatar: 'https://images.unsplash.com/photo-1438761681033-6461ffad8d80?w=400&h=400&fit=crop&crop=face'
            },
            {
              quote: 'Alpine.js integration makes it easy to create dynamic testimonial sections.',
              author: 'Frontend Developer',
              role: 'Lead Developer',
              company: 'Tech Startup',
              avatar: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=400&h=400&fit=crop&crop=face'
            }
          ]
        }">
          <h3 class="text-lg font-semibold mb-4">Testimonial Carousel</h3>
          
          <div class="mb-4">
            <Quotes 
              :quote="quotes[currentQuote].quote"
              :author="quotes[currentQuote].author"
              :role="quotes[currentQuote].role"
              :company="quotes[currentQuote].company"
              :avatar="quotes[currentQuote].avatar"
              variant="centered"
              size="lg"
            />
          </div>
          
          <div class="flex justify-center gap-2">
            <Button 
              variant="outline" 
              color="blue" 
              size="sm"
              x-on:click="currentQuote = currentQuote > 0 ? currentQuote - 1 : quotes.length - 1"
            >
              ← Previous
            </Button>
            <Button 
              variant="outline" 
              color="blue" 
              size="sm"
              x-on:click="currentQuote = currentQuote < quotes.length - 1 ? currentQuote + 1 : 0"
            >
              Next →
            </Button>
          </div>
          
          <div class="flex justify-center mt-3 gap-2">
            <template x-for="(quote, index) in quotes" :key="index">
              <button 
                x-on:click="currentQuote = index"
                :class="currentQuote === index ? 'bg-blue-500' : 'bg-gray-300'"
                class="w-2 h-2 rounded-full transition-colors"
              ></button>
            </template>
          </div>
        </div>
      </div>
    </Card>

    <!-- Testimonial vs Quote Usage Patterns -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Usage Patterns</h2>
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
          <div>
            <h3 class="text-lg font-semibold mb-4">Customer Testimonials</h3>
            <div class="space-y-6">
              <Quotes 
                quote="This product has increased our sales by 150% in just three months!"
                author="Rachel Green"
                role="Sales Manager"
                company="SalesForce Pro"
                avatar="https://images.unsplash.com/photo-1494790108755-2616b612b999?w=400&h=400&fit=crop&crop=face"
              />
              
              <Quotes 
                quote="Outstanding customer support and reliable performance. Highly recommended!"
                author="Mark Johnson"
                role="IT Director"
                company="Enterprise Tech"
                avatar="https://images.unsplash.com/photo-1507003211169-0a1dd7228f2d?w=400&h=400&fit=crop&crop=face"
              />
            </div>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-4">Inspirational Quotes</h3>
            <div class="space-y-6">
              <Quotes 
                quote="Innovation distinguishes between a leader and a follower."
                author="Steve Jobs"
                role="Co-founder"
                company="Apple Inc"
                variant="minimal"
              />
              
              <Quotes 
                quote="The way to get started is to quit talking and begin doing."
                author="Walt Disney"
                role="Founder"
                company="The Walt Disney Company"
                variant="minimal"
              />
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Status Summary -->
    <Card>
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Test Results</h2>
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">All variants render correctly</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">All sizes working</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">Avatar support functional</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">Alpine.js integration</p>
          </div>
        </div>
        
        <div class="mt-6 p-4 bg-blue-50 rounded-lg">
          <h3 class="font-semibold text-blue-900 mb-2">Component Features Tested:</h3>
          <ul class="text-sm text-blue-800 space-y-1">
            <li>• Three layout variants: default, centered, minimal</li>
            <li>• Three size options: sm, md, lg</li>
            <li>• Flexible author attribution (author, role, company)</li>
            <li>• Avatar image support with lazy loading</li>
            <li>• Custom styling through class prop</li>
            <li>• Interactive carousel implementation</li>
            <li>• Various quote lengths and use cases</li>
            <li>• Responsive design across all variants</li>
          </ul>
        </div>
      </div>
    </Card>
  </main>
</Layout>