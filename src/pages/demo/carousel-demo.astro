---
import Layout from '@/layouts/Layout.astro';
import Carousel from '@/components/ui/display/Carousel.astro';

const uniqueImages = [
    {
        src: 'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=800&h=600&fit=crop&auto=format',
        alt: 'Mountain landscape',
        caption: 'Snow-capped mountain at golden hour',
    },
    {
        src: 'https://images.unsplash.com/photo-1441974231531-c6227db76b6e?w=800&h=600&fit=crop&auto=format',
        alt: 'Forest path',
        caption: 'Peaceful trail through autumn woods',
    },
    {
        src: 'https://images.unsplash.com/photo-1469474968028-56623f02e42e?w=800&h=600&fit=crop&auto=format',
        alt: 'Desert landscape',
        caption: 'Vast desert under starry sky',
    },
    {
        src: 'https://images.unsplash.com/photo-1506197603052-3cc9c3a201bd?w=800&h=600&fit=crop&auto=format',
        alt: 'City skyline',
        caption: 'Modern city lights at night',
    },
    {
        src: 'https://images.unsplash.com/photo-1542831371-29b0f74f9713?w=800&h=600&fit=crop&auto=format',
        alt: 'Ocean beach',
        caption: 'Tropical paradise with crystal water',
    },
];
---

<Layout title="Carousel Component Demo">
    <div class="container mx-auto px-4 py-8 space-y-12">
        <div class="space-y-4">
            <h1 class="text-3xl font-bold">Carousel Component Demo</h1>
            <p class="text-gray-600">
                Interactive carousel component with hover navigation and
                autoplay features.
            </p>
            <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
                <p class="text-blue-800">
                    <strong>Features:</strong> Navigation arrows appear on hover
                    • Autoplay with interval • Fade and slide transitions
                </p>
            </div>
        </div>

        <!-- Basic Carousel -->
        <section class="space-y-4">
            <h2 class="text-2xl font-semibold">Basic Carousel</h2>
            <p class="text-gray-600">
                Hover over the image to see navigation arrows
            </p>
            <div class="max-w-2xl">
                <Carousel
                    images={uniqueImages}
                    size="lg"
                    aspectRatio="16/9"
                />
            </div>
        </section>

        <!-- Auto-play Carousel -->
        <section class="space-y-4">
            <h2 class="text-2xl font-semibold">
                Auto-play Carousel
            </h2>
            <p class="text-gray-600">
                Automatically advances every 3 seconds with fade transition
            </p>
            <div class="max-w-2xl">
                <Carousel
                    images={uniqueImages}
                    size="lg"
                    autoPlayInterval={3000}
                    aspectRatio="16/9"
                />
            </div>
        </section>

        <!-- Usage Examples -->
        <section class="space-y-4">
            <h2 class="text-2xl font-semibold">Usage Examples</h2>
            <div class="bg-gray-50 p-6 rounded-lg">
                <h3 class="font-medium mb-4">Basic Usage:</h3>
                <pre
                    class="text-sm bg-white p-4 rounded border overflow-x-auto"><code>{`<Carousel 
  images={[
    { src: '/image1.jpg', alt: 'Image 1', caption: 'Caption 1' },
    { src: '/image2.jpg', alt: 'Image 2', caption: 'Caption 2' }
  ]}
  size="lg"
/>`}</code></pre>

                <h3 class="font-medium mb-4 mt-6">With Autoplay:</h3>
                <pre
                    class="text-sm bg-white p-4 rounded border overflow-x-auto"><code>{`<Carousel 
  images={imageArray}
  autoPlayInterval={3000}
/>`}</code></pre>
            </div>
        </section>
    </div>
</Layout>

<style>
    .container {
        max-width: 1200px;
    }
</style>
