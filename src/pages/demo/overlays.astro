---
import Layout from '@/layouts/Layout.astro';
import Dialog from '@/components/ui/overlay/Dialog.astro';
import Popup from '@/components/ui/overlay/Popup.astro';
import Button from '@/components/ui/forms/Button.astro';
import Text from '@/components/ui/display/Text.astro';
import Column from '@/components/ui/layout/Column.astro';
import Section from '@/components/ui/layout/Section.astro';

---

<Layout title="Overlay Components Demo">
  <Section>
    <Column align="center" gap="xl">
      <Text variant="h1">Overlay Components Demo</Text>
      <Text variant="large" class="text-muted-foreground text-center max-w-2xl">
        Comprehensive demonstration of the two-component overlay system: Dialog (viewport-based) and Popup (positioned-based).
      </Text>
    </Column>
  </Section>

  <!-- Dialog Component Examples -->
  <Section>
    <Column gap="2xl">
      <Text variant="h2">Dialog Component (Viewport-based)</Text>
      
      <!-- Center Modal -->
      <Section class="border rounded-lg p-8">
        <Column gap="lg">
          <div class="text-center">
            <Text variant="h3">Center Modal</Text>
            <Text variant="muted">Traditional centered dialog with form controls and footer actions</Text>
          </div>
          
          <div class="flex justify-center">
            <Dialog title="User Settings" description="Configure your account preferences" size="lg">
              <Button slot="trigger" variant="default" size="lg">Open Settings Dialog</Button>
              
              <div class="space-y-6">
                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium mb-2">Display Name</label>
                    <input 
                      type="text" 
                      placeholder="Enter your name" 
                      class="w-full px-3 py-2 border rounded-md"
                    />
                  </div>
                  <div>
                    <label class="block text-sm font-medium mb-2">Username</label>
                    <input 
                      type="text" 
                      placeholder="@username" 
                      class="w-full px-3 py-2 border rounded-md"
                    />
                  </div>
                </div>
                <div>
                  <label class="block text-sm font-medium mb-2">Email</label>
                  <input 
                    type="email" 
                    placeholder="Enter your email" 
                    class="w-full px-3 py-2 border rounded-md"
                  />
                </div>
                <div>
                  <label class="block text-sm font-medium mb-2">Bio</label>
                  <textarea 
                    placeholder="Tell us about yourself..." 
                    class="w-full px-3 py-2 border rounded-md h-24"
                  ></textarea>
                </div>
                <div class="grid grid-cols-2 gap-4">
                  <div>
                    <label class="block text-sm font-medium mb-2">Location</label>
                    <input 
                      type="text" 
                      placeholder="City, Country" 
                      class="w-full px-3 py-2 border rounded-md"
                    />
                  </div>
                  <div>
                    <label class="block text-sm font-medium mb-2">Website</label>
                    <input 
                      type="url" 
                      placeholder="https://example.com" 
                      class="w-full px-3 py-2 border rounded-md"
                    />
                  </div>
                </div>
              </div>
              
              <div slot="footer" class="flex justify-between">
                <Button variant="ghost" @click="close()">Cancel</Button>
                <div class="flex gap-2">
                  <Button variant="outline" @click="close()">Save Draft</Button>
                  <Button variant="default" @click="close()">Save Changes</Button>
                </div>
              </div>
            </Dialog>
          </div>
          
          <div class="text-center text-sm text-muted-foreground max-w-2xl mx-auto">
            <strong>Features:</strong> Centered viewport positioning, backdrop blur, close on escape key, 
            focus trapping, proper ARIA attributes, and customizable header/footer slots.
          </div>
        </Column>
      </Section>

      <!-- Side Sheet -->
      <Section class="border rounded-lg p-8">
        <Column gap="lg">
          <div class="text-center">
            <Text variant="h3">Side Sheet</Text>
            <Text variant="muted">Slide-in navigation panel from the right side with menu items</Text>
          </div>
          
          <div class="flex justify-center">
            <Dialog variant="right" title="Navigation Menu" size="sm">
              <Button slot="trigger" variant="outline" size="lg">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
                Open Navigation Menu
              </Button>
              
              <nav class="space-y-3">
                <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-md hover:bg-accent transition-colors">
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                  </svg>
                  Dashboard
                </a>
                <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-md hover:bg-accent transition-colors">
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                  </svg>
                  Projects
                </a>
                <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-md hover:bg-accent transition-colors">
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                  </svg>
                  Team
                </a>
                <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-md hover:bg-accent transition-colors">
                  <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  Settings
                </a>
                <div class="border-t pt-3 mt-3">
                  <a href="#" class="flex items-center gap-3 px-4 py-3 rounded-md hover:bg-destructive/10 text-destructive transition-colors">
                    <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                    </svg>
                    Sign Out
                  </a>
                </div>
              </nav>
              
              <div slot="footer" class="flex justify-end">
                <Button variant="outline" size="sm" @click="close()">Close Menu</Button>
              </div>
            </Dialog>
          </div>
          
          <div class="text-center text-sm text-muted-foreground max-w-2xl mx-auto">
            <strong>Features:</strong> Right-side positioning, smooth slide animations, outside click dismissal, 
            icon-enhanced navigation items, and consistent hover states.
          </div>
        </Column>
      </Section>

      <!-- Drawer -->
      <Section class="border rounded-lg p-8">
        <Column gap="lg">
          <div class="text-center">
            <Text variant="h3">Bottom Drawer</Text>
            <Text variant="muted">Filter panel that slides up from the bottom with form controls</Text>
          </div>
          
          <div class="flex justify-center">
            <Dialog variant="bottom" draggable={true} snapPoints={['30%', '60%', '90%']}>
              <Button slot="trigger" variant="secondary" size="lg">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 4a1 1 0 011-1h16a1 1 0 011 1v2.586a1 1 0 01-.293.707l-6.414 6.414a1 1 0 00-.293.707V17l-4 4v-6.586a1 1 0 00-.293-.707L3.293 7.293A1 1 0 013 6.586V4z"></path>
                </svg>
                Open Filter Drawer
              </Button>
              
              <div class="space-y-6">
                <div>
                  <Text variant="h4">Filter Products</Text>
                  <Text variant="muted">Refine your search with these filter options</Text>
                </div>
                
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                    <label class="block text-sm font-medium mb-2">Category</label>
                    <select class="w-full px-3 py-2 border rounded-md">
                      <option>All Categories</option>
                      <option>Electronics</option>
                      <option>Clothing & Fashion</option>
                      <option>Home & Garden</option>
                      <option>Books & Media</option>
                      <option>Sports & Outdoors</option>
                    </select>
                  </div>
                  <div>
                    <label class="block text-sm font-medium mb-2">Price Range</label>
                    <select class="w-full px-3 py-2 border rounded-md">
                      <option>Any Price</option>
                      <option>Under $25</option>
                      <option>$25 - $50</option>
                      <option>$50 - $100</option>
                      <option>$100 - $250</option>
                      <option>Over $250</option>
                    </select>
                  </div>
                  <div>
                    <label class="block text-sm font-medium mb-2">Brand</label>
                    <select class="w-full px-3 py-2 border rounded-md">
                      <option>All Brands</option>
                      <option>Apple</option>
                      <option>Samsung</option>
                      <option>Nike</option>
                      <option>Adidas</option>
                    </select>
                  </div>
                  <div>
                    <label class="block text-sm font-medium mb-2">Rating</label>
                    <select class="w-full px-3 py-2 border rounded-md">
                      <option>Any Rating</option>
                      <option>4+ Stars</option>
                      <option>3+ Stars</option>
                      <option>2+ Stars</option>
                      <option>1+ Stars</option>
                    </select>
                  </div>
                </div>
                
                <div class="flex gap-3">
                  <Button variant="outline" class="flex-1" @click="close()">Clear Filters</Button>
                  <Button variant="default" class="flex-1" @click="close()">Apply Filters</Button>
                </div>
              </div>
            </Dialog>
          </div>
          
          <div class="text-center text-sm text-muted-foreground max-w-2xl mx-auto">
            <strong>Features:</strong> Bottom slide-up animation, visual drag handle, responsive form layout, 
            and clear/apply action buttons for filter management.
          </div>
        </Column>        
      </Section>

      <!-- Full Screen -->
      <Section class="border rounded-lg p-8">
        <Column gap="lg">
          <div class="text-center">
            <Text variant="h3">Fullscreen Overlay</Text>
            <Text variant="muted">Immersive experience that takes over the entire viewport with navigation</Text>
          </div>
          
          <div class="flex justify-center">
            <Dialog variant="fullscreen" theme="dark">
              <Button slot="trigger" variant="default" size="lg">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
                View Image Gallery
              </Button>
              
              <div class="flex items-center justify-center h-full">
                <div class="text-center max-w-2xl">
                  <div class="relative mb-8">
                    <div class="w-96 h-64 bg-gradient-to-br from-gray-800 to-gray-900 rounded-lg mb-4 flex items-center justify-center border-2 border-gray-700">
                      <div class="text-center">
                        <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                        </svg>
                        <Text variant="large" class="text-gray-400">Sample Image</Text>
                      </div>
                    </div>
                  </div>
                  <Text variant="h3" class="text-white mb-4">Beautiful Landscape Photography</Text>
                  <Text variant="muted" class="text-gray-400 mb-8 leading-relaxed">
                    Explore this stunning collection of landscape photography captured from around the world. 
                    Use the navigation controls below to browse through the gallery.
                  </Text>
                </div>
              </div>
              
              <div slot="navigation" class="flex items-center justify-center gap-6">
                <Button variant="outline" size="sm">
                  <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
                  </svg>
                  Previous
                </Button>
                <div class="flex items-center gap-3">
                  <Text variant="small" class="text-white">Image</Text>
                  <Text variant="medium" class="text-white font-semibold">3 of 12</Text>
                </div>
                <Button variant="outline" size="sm">
                  Next
                  <svg class="ml-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                </Button>
              </div>
            </Dialog>
          </div>
          
          <div class="text-center text-sm text-muted-foreground max-w-2xl mx-auto">
            <strong>Features:</strong> Full viewport coverage, dark theme variant, custom navigation slot positioning, 
            and immersive content presentation perfect for galleries and media viewers.
          </div>
        </Column>
      </Section>
    </Column>
  </Section>

  <!-- Popup Component Examples -->
  <Section>
    <Column gap="2xl">
      <Text variant="h2">Popup Component (Positioned-based)</Text>
      
      <!-- Tooltip -->
      <Section class="border rounded-lg p-8">
        <Column gap="lg">
          <div class="text-center">
            <Text variant="h3">Tooltip</Text>
            <Text variant="muted">Contextual help text that appears on hover with smart positioning</Text>
          </div>
          
          <div class="flex justify-center items-center gap-8 flex-wrap py-16">
            <Popup placement="top" dismiss="auto">
              <Button variant="default" size="lg">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3-3m0 0l-3 3m3-3v12"></path>
                </svg>
                Save Document
              </Button>
              <div class="px-3 py-2 text-sm">This button saves your changes to the document</div>
            </Popup>
            
            <Popup placement="right" dismiss="auto">
              <Button variant="outline" size="lg">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                </svg>
                Copy Share Link
              </Button>
              <div class="px-3 py-2 text-sm">Click to copy the shareable link to your clipboard</div>
            </Popup>
            
            <Popup placement="bottom" dismiss="auto">
              <Button variant="destructive" size="lg">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
                Delete Item
              </Button>
              <div class="px-3 py-2 text-sm">This action permanently removes the item and cannot be undone</div>
            </Popup>
            
            <Popup placement="left" dismiss="auto">
              <Button variant="secondary" size="lg">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-3-3m3 3l3-3m2 8H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
                Download File
              </Button>
              <div class="px-3 py-2 text-sm">Download the file to your local device</div>
            </Popup>
          </div>
          
          <div class="text-center text-sm text-muted-foreground max-w-2xl mx-auto">
            <strong>Features:</strong> Hover-triggered display, automatic positioning (top, right, bottom, left), 
            auto-dismiss on mouse leave, and clean visual connection to triggers.
          </div>
        </Column>
      </Section>

      <!-- Popover -->
      <Section class="border rounded-lg p-8">
        <Column gap="lg">
          <div class="text-center">
            <Text variant="h3">Popover</Text>
            <Text variant="muted">Rich content popup with interactive elements and custom layouts</Text>
          </div>
          
          <div class="flex justify-center items-center gap-8 flex-wrap py-20">
            <Popup trigger="click" placement="bottom" size="lg">
              <Button slot="trigger" variant="outline" size="lg">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
                User Profile
              </Button>
              
              <div slot="content" class="p-6">
                <div class="flex items-center gap-4 mb-6">
                  <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center">
                    <Text variant="large" class="text-white font-bold">JD</Text>
                  </div>
                  <div>
                    <Text variant="h4" class="font-semibold">John Doe</Text>
                    <Text variant="small" class="text-muted-foreground">john.doe@company.com</Text>
                    <div class="flex items-center gap-2 mt-1">
                      <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                      <Text variant="small" class="text-green-600">Online</Text>
                    </div>
                  </div>
                </div>
                
                <div class="space-y-2 mb-4">
                  <Button variant="ghost" size="sm" class="w-full justify-start">
                    <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                    </svg>
                    View Full Profile
                  </Button>
                  <Button variant="ghost" size="sm" class="w-full justify-start">
                    <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"></path>
                    </svg>
                    Send Message
                  </Button>
                  <Button variant="ghost" size="sm" class="w-full justify-start">
                    <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                    </svg>
                    Account Settings
                  </Button>
                </div>
                
                <div class="border-t pt-3">
                  <Button variant="ghost" size="sm" class="w-full justify-start text-destructive hover:bg-destructive/10">
                    <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                    </svg>
                    Sign Out
                  </Button>
                </div>
              </div>
            </Popup>
            
            <Popup trigger="click" placement="bottom" size="xl">
              <Button slot="trigger" variant="secondary" size="lg">
                <svg class="mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2-2V7a2 2 0 012-2h2a2 2 0 002 2v2a2 2 0 002 2h2a2 2 0 002-2V7a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 00-2 2h-2a2 2 0 00-2 2v6a2 2 0 01-2 2H9z"></path>
