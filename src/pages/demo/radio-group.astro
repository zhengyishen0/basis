---
import Layout from '@/layouts/Layout.astro';
import RadioGroupXFor from '@/components/ui/forms/RadioGroupXFor.astro';
---

<Layout title="Radio Group Component Demo">
    <main class="min-h-screen bg-background py-8">
        <div class="max-w-4xl mx-auto px-6 space-y-12">
            <!-- Header -->
            <div class="text-center space-y-4">
                <div class="mb-8">
                    <a
                        href="/demo"
                        class="inline-flex items-center gap-2 text-sm font-medium text-muted-foreground hover:text-primary transition-colors"
                    >
                        <svg
                            class="w-4 h-4"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M15 19l-7-7 7-7"></path>
                        </svg>
                        Back to Demos
                    </a>
                </div>
                <h1 class="text-4xl font-bold text-foreground">
                    Radio Group Component
                </h1>
                <p class="text-xl text-muted-foreground max-w-2xl mx-auto">
                    Single-select option groups with primary theme, smooth
                    animations, and Alpine.js integration
                </p>
            </div>

            <div class="space-y-8">
                <!-- Basic Usage -->
                <div class="bg-card border border-border rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-card-foreground mb-4">
                        Basic Usage
                    </h3>
                    <div class="space-y-6">
                        <RadioGroupXFor
                            name="basic-plan"
                            options={[
                                {
                                    value: 'free',
                                    title: 'Free Plan',
                                    description:
                                        'Perfect for personal projects',
                                },
                                {
                                    value: 'pro',
                                    title: 'Pro Plan',
                                    description: 'Best for small teams',
                                },
                                {
                                    value: 'enterprise',
                                    title: 'Enterprise Plan',
                                    description: 'For large organizations',
                                },
                            ]}
                            selectedOption="pro"
                        />
                    </div>
                </div>

                <!-- Without Descriptions -->
                <div class="bg-card border border-border rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-card-foreground mb-4">
                        Without Descriptions
                    </h3>
                    <div class="space-y-6">
                        <RadioGroupXFor
                            name="size"
                            options={[
                                { value: 'small', title: 'Small' },
                                { value: 'medium', title: 'Medium' },
                                { value: 'large', title: 'Large' },
                            ]}
                            selectedOption="medium"
                        />
                    </div>
                </div>

                <!-- Disabled States -->
                <div class="bg-card border border-border rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-card-foreground mb-4">
                        Disabled States
                    </h3>
                    <div class="space-y-6">
                        <RadioGroupXFor
                            name="disabled-options"
                            options={[
                                {
                                    value: 'available',
                                    title: 'Available Option',
                                    description: 'This option is available',
                                },
                                {
                                    value: 'disabled',
                                    title: 'Disabled Option',
                                    description: 'This option is disabled',
                                    disabled: true,
                                },
                                {
                                    value: 'selected',
                                    title: 'Selected Option',
                                    description: 'This option is selected',
                                },
                            ]}
                            selectedOption="selected"
                        />

                        <div class="mt-8">
                            <h4 class="font-medium text-card-foreground mb-3">
                                Entire Group Disabled
                            </h4>
                            <RadioGroupXFor
                                name="all-disabled"
                                options={[
                                    {
                                        value: 'option1',
                                        title: 'Option 1',
                                        description: 'All options are disabled',
                                    },
                                    {
                                        value: 'option2',
                                        title: 'Option 2',
                                        description: 'Cannot select any option',
                                    },
                                    {
                                        value: 'option3',
                                        title: 'Option 3',
                                        description:
                                            'Group-level disabled state',
                                    },
                                ]}
                                disabled={true}
                                selectedOption="option2"
                            />
                        </div>
                    </div>
                </div>

                <!-- Interactive Demo -->
                <div class="bg-card border border-border rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-card-foreground mb-4">
                        Interactive Demo
                    </h3>
                    <div
                        x-data="{
              selectedTheme: 'light',
              selectedLanguage: 'en'
            }"
                        class="space-y-6"
                    >
                        <div>
                            <h4 class="font-medium text-card-foreground mb-3">
                                Theme Preference
                            </h4>
                            <RadioGroupXFor
                                name="theme"
                                options={[
                                    {
                                        value: 'light',
                                        title: 'Light Theme',
                                        description:
                                            'Clean and bright interface',
                                    },
                                    {
                                        value: 'dark',
                                        title: 'Dark Theme',
                                        description: 'Easy on the eyes',
                                    },
                                    {
                                        value: 'auto',
                                        title: 'System Theme',
                                        description: 'Follow system preference',
                                    },
                                ]}
                                x-model="selectedTheme"
                            />
                        </div>

                        <div>
                            <h4 class="font-medium text-card-foreground mb-3">
                                Language
                            </h4>
                            <RadioGroupXFor
                                name="language"
                                options={[
                                    { value: 'en', title: 'English' },
                                    { value: 'es', title: 'Español' },
                                    { value: 'fr', title: 'Français' },
                                    { value: 'de', title: 'Deutsch' },
                                ]}
                                x-model="selectedLanguage"
                            />
                        </div>

                        <!-- State Display -->
                        <div class="mt-6 p-4 bg-muted rounded-lg">
                            <h4 class="font-medium text-muted-foreground mb-2">
                                Current State:
                            </h4>
                            <div class="text-sm font-mono space-y-1">
                                <div>
                                    theme: <span
                                        x-text="selectedTheme"
                                        class="text-primary"></span>
                                </div>
                                <div>
                                    language: <span
                                        x-text="selectedLanguage"
                                        class="text-primary"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Client-side XFor Benefits -->
                <div class="bg-card border border-border rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-card-foreground mb-4">
                        Client-side XFor Benefits
                    </h3>
                    <div class="space-y-4">
                        <p class="text-muted-foreground">
                            This RadioGroupXFor component uses Alpine.js x-for templates for dynamic client-side rendering:
                        </p>
                        
                        <RadioGroupXFor
                            name="ssr-benefits"
                            options={[
                                {
                                    value: 'performance',
                                    title: 'Better Performance',
                                    description: 'Client-side rendering with x-for templates',
                                },
                                {
                                    value: 'seo',
                                    title: 'Dynamic Flexibility',
                                    description: 'Runtime data processing and manipulation',
                                },
                                {
                                    value: 'bundle',
                                    title: 'Alpine.js Integration',
                                    description: 'Uses x-for for template rendering',
                                },
                            ]}
                            selectedOption="performance"
                        />

                        <div class="p-4 bg-muted rounded-lg">
                            <h5 class="font-medium text-muted-foreground mb-2">
                                XFor Approach Benefits:
                            </h5>
                            <ul class="list-disc list-inside space-y-1 text-sm text-muted-foreground">
                                <li>Options rendered client-side with Alpine.js x-for</li>
                                <li>Dynamic template processing at runtime</li>
                                <li>Flexible data manipulation and updates</li>
                                <li>Interactive state management with Alpine.js</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Animation Showcase -->
                <div class="bg-card border border-border rounded-lg p-6">
                    <h3 class="text-lg font-semibold text-card-foreground mb-4">
                        Animation Showcase
                    </h3>
                    <div
                        x-data="{ 
              demoValue: 'option1',
              cycleOptions() {
                const options = ['option1', 'option2', 'option3'];
                const current = options.indexOf(this.demoValue);
                this.demoValue = options[(current + 1) % options.length];
              }
            }"
                        class="space-y-4"
                    >
                        <button
                            @click="cycleOptions()"
                            class="px-4 py-2 bg-primary text-primary-foreground rounded-md hover:bg-primary/90 transition-colors"
                        >
                            Cycle Selection (watch animations)
                        </button>

                        <RadioGroupXFor
                            name="animation-demo"
                            options={[
                                {
                                    value: 'option1',
                                    title: 'Animation Demo 1',
                                    description: 'Watch the smooth transitions',
                                },
                                {
                                    value: 'option2',
                                    title: 'Animation Demo 2',
                                    description: 'Scale and fade effects',
                                },
                                {
                                    value: 'option3',
                                    title: 'Animation Demo 3',
                                    description: 'Hardware accelerated',
                                },
                            ]}
                            x-model="demoValue"
                        />
                    </div>
                </div>

            </div>
        </div>
    </main>
</Layout>
