---
import Layout from '@/layouts/Layout.astro';
import {
    DatePicker,
    DatePickerCalendar,
} from '@/components/ui/forms/datepicker';
import Button from '@/components/ui/forms/Button.astro';
import { Calendar as CalendarIcon } from 'lucide-astro';
---

<Layout title="DatePicker Demo">
    <div class="container mx-auto p-8 max-w-4xl">
        <h1 class="text-3xl font-bold mb-8">
            DatePicker - Named Slots Implementation
        </h1>

        <!-- Single Date Selection -->
        <section class="p-8 border border-gray-200 rounded-lg mb-8">
            <h2 class="text-2xl font-semibold mb-6">Single Date Selection</h2>

            <div class="space-y-6">
                <div>
                    <label class="block text-sm font-medium mb-2"
                        >Basic Date (Y-m-d)</label
                    >
                    <DatePicker format="Y-m-d" name="single_date">
                        <Button slot="trigger" variant="outline">
                            <CalendarIcon className="mr-2 h-4 w-4" />
                            <span x-text="formattedDate || 'Select date'"
                            ></span>
                        </Button>
                        <DatePickerCalendar
                            slot="content"
                            mode="single"
                            numberOfMonths={1}
                        />
                    </DatePicker>
                </div>

                <div>
                    <label class="block text-sm font-medium mb-2"
                        >US Format (m/d/Y)</label
                    >
                    <DatePicker format="m/d/Y" name="us_date">
                        <Button slot="trigger" variant="outline">
                            <CalendarIcon className="mr-2 h-4 w-4" />
                            <span x-text="formattedDate || 'MM/DD/YYYY'"></span>
                        </Button>
                        <DatePickerCalendar
                            slot="content"
                            mode="single"
                            numberOfMonths={1}
                        />
                    </DatePicker>
                </div>

                <div>
                    <label class="block text-sm font-medium mb-2"
                        >Friendly Format (M j, Y)</label
                    >
                    <DatePicker format="M j, Y" name="friendly_date">
                        <Button slot="trigger" variant="outline">
                            <CalendarIcon className="mr-2 h-4 w-4" />
                            <span x-text="formattedDate || 'Jan 1, 2024'"
                            ></span>
                        </Button>
                        <DatePickerCalendar
                            slot="content"
                            mode="single"
                            numberOfMonths={1}
                        />
                    </DatePicker>
                </div>
            </div>
        </section>

        <!-- Range Selection -->
        <section class="p-8 border border-gray-200 rounded-lg mb-8">
            <h2 class="text-2xl font-semibold mb-6">Range Selection</h2>

            <div class="space-y-6">
                <div>
                    <label class="block text-sm font-medium mb-2"
                        >Single Month Range</label
                    >
                    <DatePicker format="M j, Y" name="range_single">
                        <Button
                            slot="trigger"
                            variant="outline"
                            className="w-64"
                        >
                            <CalendarIcon className="mr-2 h-4 w-4" />
                            <span x-text="formattedDate || 'Select date range'"
                            ></span>
                        </Button>
                        <DatePickerCalendar
                            slot="content"
                            mode="range"
                            numberOfMonths={1}
                        />
                    </DatePicker>
                </div>

                <div>
                    <label class="block text-sm font-medium mb-2"
                        >Two Month Range</label
                    >
                    <DatePicker format="M j, Y" name="range_double">
                        <Button
                            slot="trigger"
                            variant="outline"
                            className="w-80"
                        >
                            <CalendarIcon className="mr-2 h-4 w-4" />
                            <span
                                x-text="formattedDate || 'Select date range (2 months)'"
                            ></span>
                        </Button>
                        <DatePickerCalendar
                            slot="content"
                            mode="range"
                            numberOfMonths={2}
                        />
                    </DatePicker>
                </div>

                <div>
                    <label class="block text-sm font-medium mb-2"
                        >Three Month Range</label
                    >
                    <DatePicker format="M j, Y" name="range_triple">
                        <Button
                            slot="trigger"
                            variant="outline"
                            className="w-96"
                        >
                            <CalendarIcon className="mr-2 h-4 w-4" />
                            <span
                                x-text="formattedDate || 'Select date range (3 months)'"
                            ></span>
                        </Button>
                        <DatePickerCalendar
                            slot="content"
                            mode="range"
                            numberOfMonths={3}
                        />
                    </DatePicker>
                </div>
            </div>
        </section>

        <!-- Custom Calendar Variants -->
        <section class="p-8 border border-gray-200 rounded-lg mb-8">
            <h2 class="text-2xl font-semibold mb-6">
                Custom Calendar Variants
            </h2>

            <div class="space-y-6">
                <div>
                    <label class="block text-sm font-medium mb-2"
                        >Minimal Variant</label
                    >
                    <DatePicker format="Y-m-d" name="minimal_date">
                        <Button slot="trigger" variant="outline">
                            <CalendarIcon className="mr-2 h-4 w-4" />
                            <span x-text="formattedDate || 'Minimal calendar'"
                            ></span>
                        </Button>
                        <DatePickerCalendar
                            slot="content"
                            mode="single"
                            numberOfMonths={1}
                            variant="minimal"
                            size="lg"
                        />
                    </DatePicker>
                </div>

                <div>
                    <label class="block text-sm font-medium mb-2"
                        >Compact Density</label
                    >
                    <DatePicker format="Y-m-d" name="compact_date">
                        <Button slot="trigger" variant="outline">
                            <CalendarIcon className="mr-2 h-4 w-4" />
                            <span x-text="formattedDate || 'Compact calendar'"
                            ></span>
                        </Button>
                        <DatePickerCalendar
                            slot="content"
                            mode="single"
                            numberOfMonths={1}
                            density="compact"
                            size="sm"
                        />
                    </DatePicker>
                </div>
            </div>
        </section>
    </div>
</Layout>
