<script>
  function toastQueue() {
    return {
      toasts: [],
      nextId: 1,
      
      addToast(variant, title, message, duration = 4000) {
        const toast = {
          id: this.nextId++,
          variant,
          title,
          message,
          visible: true,
          duration
        };
        
        this.toasts.push(toast);
        
        // Auto remove after duration
        if (duration > 0) {
          setTimeout(() => {
            this.removeToast(toast.id);
          }, duration);
        }
      },
      
      removeToast(id) {
        const index = this.toasts.findIndex(t => t.id === id);
        if (index > -1) {
          this.toasts[index].visible = false;
          setTimeout(() => {
            this.toasts.splice(index, 1);
          }, 300); // Wait for animation
        }
      },
      
      clearAllToasts() {
        this.toasts.forEach(toast => {
          toast.visible = false;
        });
        setTimeout(() => {
          this.toasts = [];
        }, 300);
      },
      
      getToastClasses(variant) {
        const classes = {
          'default': 'bg-white border-neutral-200 text-neutral-900',
          'success': 'bg-green-50 border-green-200 text-green-800',
          'error': 'bg-red-50 border-red-200 text-red-800',
          'warning': 'bg-yellow-50 border-yellow-200 text-yellow-800',
          'info': 'bg-blue-50 border-blue-200 text-blue-800',
        };
        return classes[variant] || classes['default'];
      },
      
      getToastIcon(variant) {
        const icons = {
          'success': 'stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"',
          'error': 'stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"',
          'warning': 'stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4.5c-.77-.833-2.694-.833-3.464 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"',
          'info': 'stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"',
          'default': 'stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"',
        };
        return icons[variant] || icons['default'];
      }
    }
  }
</script>