---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/pine/Card.astro';
import Button from '../../components/pine/Button.astro';
import Badge from '../../components/pine/Badge.astro';
import Toast from '../../components/pine/Toast.astro';
---

<Layout title="Toast Component Test">
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">Toast Component Test</h1>
      <div class="flex justify-center gap-2 mb-6">
        <Button href="/test" variant="outline" color="neutral">← Back to Test Suite</Button>
        <Button href="/test/all" variant="ghost" color="neutral">View All</Button>
      </div>
    </div>

    <!-- Toast Variants -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Toast Variants</h2>
        <div class="space-y-4">
          <p class="text-neutral-600">Different types of toast notifications with appropriate colors and icons</p>
          
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
            <div x-data="{ showToast: false }">
              <Button 
                variant="solid" 
                color="green" 
                @click="showToast = true"
                class="w-full"
              >
                Success Toast
              </Button>
              <div x-show="showToast" x-transition class="fixed top-4 right-4 z-50">
                <div class="bg-green-50 border border-green-200 text-green-800 rounded-lg p-4 shadow-lg max-w-sm">
                  <div class="flex">
                    <svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <div class="flex-1">
                      <p class="font-medium text-sm mb-1">Success!</p>
                      <div class="text-sm">Your action was completed successfully.</div>
                    </div>
                    <button @click="showToast = false" class="ml-4 text-current hover:opacity-70">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
            
            <div x-data="{ showToast: false }">
              <Button 
                variant="solid" 
                color="red" 
                @click="showToast = true"
                class="w-full"
              >
                Error Toast
              </Button>
              <div x-show="showToast" x-transition class="fixed top-4 right-4 z-50">
                <div class="bg-red-50 border border-red-200 text-red-800 rounded-lg p-4 shadow-lg max-w-sm">
                  <div class="flex">
                    <svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                    </svg>
                    <div class="flex-1">
                      <p class="font-medium text-sm mb-1">Error!</p>
                      <div class="text-sm">Something went wrong. Please try again.</div>
                    </div>
                    <button @click="showToast = false" class="ml-4 text-current hover:opacity-70">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
            
            <div x-data="{ showToast: false }">
              <Button 
                variant="solid" 
                color="yellow" 
                @click="showToast = true"
                class="w-full"
              >
                Warning Toast
              </Button>
              <div x-show="showToast" x-transition class="fixed top-4 right-4 z-50">
                <div class="bg-yellow-50 border border-yellow-200 text-yellow-800 rounded-lg p-4 shadow-lg max-w-sm">
                  <div class="flex">
                    <svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4.5c-.77-.833-2.694-.833-3.464 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    </svg>
                    <div class="flex-1">
                      <p class="font-medium text-sm mb-1">Warning!</p>
                      <div class="text-sm">Please review your settings before continuing.</div>
                    </div>
                    <button @click="showToast = false" class="ml-4 text-current hover:opacity-70">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
            
            <div x-data="{ showToast: false }">
              <Button 
                variant="solid" 
                color="blue" 
                @click="showToast = true"
                class="w-full"
              >
                Info Toast
              </Button>
              <div x-show="showToast" x-transition class="fixed top-4 right-4 z-50">
                <div class="bg-blue-50 border border-blue-200 text-blue-800 rounded-lg p-4 shadow-lg max-w-sm">
                  <div class="flex">
                    <svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="flex-1">
                      <p class="font-medium text-sm mb-1">Information</p>
                      <div class="text-sm">Here's some helpful information for you.</div>
                    </div>
                    <button @click="showToast = false" class="ml-4 text-current hover:opacity-70">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
            
            <div x-data="{ showToast: false }">
              <Button 
                variant="solid" 
                color="neutral" 
                @click="showToast = true"
                class="w-full"
              >
                Default Toast
              </Button>
              <div x-show="showToast" x-transition class="fixed top-4 right-4 z-50">
                <div class="bg-white border border-neutral-200 text-neutral-900 rounded-lg p-4 shadow-lg max-w-sm">
                  <div class="flex">
                    <svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="flex-1">
                      <p class="font-medium text-sm mb-1">Notification</p>
                      <div class="text-sm">This is a default toast notification.</div>
                    </div>
                    <button @click="showToast = false" class="ml-4 text-current hover:opacity-70">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Toast Positions -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Toast Positions</h2>
        <div class="space-y-4">
          <p class="text-neutral-600">Toast notifications can appear in different positions on the screen</p>
          
          <div class="grid grid-cols-2 md:grid-cols-3 gap-4">
            <div x-data="{ showToast: false }">
              <Button 
                variant="outline" 
                color="blue" 
                @click="showToast = true"
                class="w-full"
              >
                Top Right
              </Button>
              <div x-show="showToast" x-transition class="fixed top-4 right-4 z-50">
                <div class="bg-blue-50 border border-blue-200 text-blue-800 rounded-lg p-4 shadow-lg max-w-sm">
                  <div class="flex">
                    <svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="flex-1">
                      <p class="font-medium text-sm mb-1">Top Right</p>
                      <div class="text-sm">Toast positioned in top right corner</div>
                    </div>
                    <button @click="showToast = false" class="ml-4 text-current hover:opacity-70">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
            
            <div x-data="{ showToast: false }">
              <Button 
                variant="outline" 
                color="blue" 
                @click="showToast = true"
                class="w-full"
              >
                Top Left
              </Button>
              <div x-show="showToast" x-transition class="fixed top-4 left-4 z-50">
                <div class="bg-blue-50 border border-blue-200 text-blue-800 rounded-lg p-4 shadow-lg max-w-sm">
                  <div class="flex">
                    <svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="flex-1">
                      <p class="font-medium text-sm mb-1">Top Left</p>
                      <div class="text-sm">Toast positioned in top left corner</div>
                    </div>
                    <button @click="showToast = false" class="ml-4 text-current hover:opacity-70">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
            
            <div x-data="{ showToast: false }">
              <Button 
                variant="outline" 
                color="blue" 
                @click="showToast = true"
                class="w-full"
              >
                Top Center
              </Button>
              <div x-show="showToast" x-transition class="fixed top-4 left-1/2 transform -translate-x-1/2 z-50">
                <div class="bg-blue-50 border border-blue-200 text-blue-800 rounded-lg p-4 shadow-lg max-w-sm">
                  <div class="flex">
                    <svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="flex-1">
                      <p class="font-medium text-sm mb-1">Top Center</p>
                      <div class="text-sm">Toast positioned in top center</div>
                    </div>
                    <button @click="showToast = false" class="ml-4 text-current hover:opacity-70">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
            
            <div x-data="{ showToast: false }">
              <Button 
                variant="outline" 
                color="purple" 
                @click="showToast = true"
                class="w-full"
              >
                Bottom Right
              </Button>
              <div x-show="showToast" x-transition class="fixed bottom-4 right-4 z-50">
                <div class="bg-purple-50 border border-purple-200 text-purple-800 rounded-lg p-4 shadow-lg max-w-sm">
                  <div class="flex">
                    <svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="flex-1">
                      <p class="font-medium text-sm mb-1">Bottom Right</p>
                      <div class="text-sm">Toast positioned in bottom right corner</div>
                    </div>
                    <button @click="showToast = false" class="ml-4 text-current hover:opacity-70">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
            
            <div x-data="{ showToast: false }">
              <Button 
                variant="outline" 
                color="purple" 
                @click="showToast = true"
                class="w-full"
              >
                Bottom Left
              </Button>
              <div x-show="showToast" x-transition class="fixed bottom-4 left-4 z-50">
                <div class="bg-purple-50 border border-purple-200 text-purple-800 rounded-lg p-4 shadow-lg max-w-sm">
                  <div class="flex">
                    <svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="flex-1">
                      <p class="font-medium text-sm mb-1">Bottom Left</p>
                      <div class="text-sm">Toast positioned in bottom left corner</div>
                    </div>
                    <button @click="showToast = false" class="ml-4 text-current hover:opacity-70">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
            
            <div x-data="{ showToast: false }">
              <Button 
                variant="outline" 
                color="purple" 
                @click="showToast = true"
                class="w-full"
              >
                Bottom Center
              </Button>
              <div x-show="showToast" x-transition class="fixed bottom-4 left-1/2 transform -translate-x-1/2 z-50">
                <div class="bg-purple-50 border border-purple-200 text-purple-800 rounded-lg p-4 shadow-lg max-w-sm">
                  <div class="flex">
                    <svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="flex-1">
                      <p class="font-medium text-sm mb-1">Bottom Center</p>
                      <div class="text-sm">Toast positioned in bottom center</div>
                    </div>
                    <button @click="showToast = false" class="ml-4 text-current hover:opacity-70">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Auto-dismiss and Duration -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Auto-dismiss and Duration</h2>
        <div class="space-y-4">
          <p class="text-neutral-600">Toast notifications with different auto-dismiss durations</p>
          
          <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
            <div x-data="{ showToast: false, duration: 2000 }">
              <Button 
                variant="outline" 
                color="green" 
                @click="showToast = true; setTimeout(() => showToast = false, duration)"
                class="w-full"
              >
                2 Second Toast
              </Button>
              <div x-show="showToast" x-transition class="fixed top-4 right-4 z-50">
                <div class="bg-green-50 border border-green-200 text-green-800 rounded-lg p-4 shadow-lg max-w-sm relative">
                  <div class="flex">
                    <svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    <div class="flex-1">
                      <p class="font-medium text-sm mb-1">Quick Toast</p>
                      <div class="text-sm">Disappears after 2 seconds</div>
                    </div>
                    <button @click="showToast = false" class="ml-4 text-current hover:opacity-70">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                  <div class="absolute bottom-0 left-0 h-1 bg-current opacity-30 rounded-b-lg w-full"
                       x-init="$el.style.transition = 'width 2000ms linear'; setTimeout(() => $el.style.width = '0%', 10)">
                  </div>
                </div>
              </div>
            </div>
            
            <div x-data="{ showToast: false, duration: 5000 }">
              <Button 
                variant="outline" 
                color="blue" 
                @click="showToast = true; setTimeout(() => showToast = false, duration)"
                class="w-full"
              >
                5 Second Toast
              </Button>
              <div x-show="showToast" x-transition class="fixed top-4 right-4 z-50">
                <div class="bg-blue-50 border border-blue-200 text-blue-800 rounded-lg p-4 shadow-lg max-w-sm relative">
                  <div class="flex">
                    <svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="flex-1">
                      <p class="font-medium text-sm mb-1">Standard Toast</p>
                      <div class="text-sm">Disappears after 5 seconds</div>
                    </div>
                    <button @click="showToast = false" class="ml-4 text-current hover:opacity-70">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                  <div class="absolute bottom-0 left-0 h-1 bg-current opacity-30 rounded-b-lg w-full"
                       x-init="$el.style.transition = 'width 5000ms linear'; setTimeout(() => $el.style.width = '0%', 10)">
                  </div>
                </div>
              </div>
            </div>
            
            <div x-data="{ showToast: false, duration: 10000 }">
              <Button 
                variant="outline" 
                color="orange" 
                @click="showToast = true; setTimeout(() => showToast = false, duration)"
                class="w-full"
              >
                10 Second Toast
              </Button>
              <div x-show="showToast" x-transition class="fixed top-4 right-4 z-50">
                <div class="bg-orange-50 border border-orange-200 text-orange-800 rounded-lg p-4 shadow-lg max-w-sm relative">
                  <div class="flex">
                    <svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4.5c-.77-.833-2.694-.833-3.464 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    </svg>
                    <div class="flex-1">
                      <p class="font-medium text-sm mb-1">Long Toast</p>
                      <div class="text-sm">Disappears after 10 seconds</div>
                    </div>
                    <button @click="showToast = false" class="ml-4 text-current hover:opacity-70">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                  <div class="absolute bottom-0 left-0 h-1 bg-current opacity-30 rounded-b-lg w-full"
                       x-init="$el.style.transition = 'width 10000ms linear'; setTimeout(() => $el.style.width = '0%', 10)">
                  </div>
                </div>
              </div>
            </div>
            
            <div x-data="{ showToast: false }">
              <Button 
                variant="outline" 
                color="neutral" 
                @click="showToast = true"
                class="w-full"
              >
                Persistent Toast
              </Button>
              <div x-show="showToast" x-transition class="fixed top-4 right-4 z-50">
                <div class="bg-white border border-neutral-200 text-neutral-900 rounded-lg p-4 shadow-lg max-w-sm">
                  <div class="flex">
                    <svg class="w-5 h-5 mr-3 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    <div class="flex-1">
                      <p class="font-medium text-sm mb-1">Persistent Toast</p>
                      <div class="text-sm">Manual dismissal only</div>
                    </div>
                    <button @click="showToast = false" class="ml-4 text-current hover:opacity-70">
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                      </svg>
                    </button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Card>

    <!-- Toast Queue System -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Toast Queue System</h2>
        <div x-data="toastQueue()" class="space-y-4">
          <p class="text-neutral-600">Demonstration of multiple toasts with queue management</p>
          
          <div class="flex flex-wrap gap-4">
            <Button 
              variant="solid" 
              color="green" 
              @click="addToast('success', 'Success!', 'Operation completed successfully')"
            >
              Add Success Toast
            </Button>
            <Button 
              variant="solid" 
              color="red" 
              @click="addToast('error', 'Error!', 'Something went wrong')"
            >
              Add Error Toast
            </Button>
            <Button 
              variant="solid" 
              color="yellow" 
