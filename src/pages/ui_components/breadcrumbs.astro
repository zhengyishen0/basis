---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/pine/Card.astro';
import Button from '../../components/pine/Button.astro';
import Badge from '../../components/pine/Badge.astro';
import Breadcrumbs from '../../components/pine/Breadcrumbs.astro';
---

<Layout title="Breadcrumbs Component Test">
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">Breadcrumbs Component Test</h1>
      <div class="flex justify-center gap-2 mb-6">
        <Button href="/test" variant="outline" color="neutral">← Back to Test Suite</Button>
        <Button href="/test/all" variant="ghost" color="neutral">View All</Button>
      </div>
    </div>

    <!-- Basic Breadcrumbs -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Basic Breadcrumbs</h2>
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-semibold mb-2">Simple Navigation</h3>
            <Breadcrumbs 
              items={[
                { label: "Dashboard", href: "/dashboard" },
                { label: "Users", href: "/users" },
                { label: "Profile", current: true }
              ]}
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-2">E-commerce Example</h3>
            <Breadcrumbs 
              items={[
                { label: "Electronics", href: "/electronics" },
                { label: "Computers", href: "/electronics/computers" },
                { label: "Laptops", href: "/electronics/computers/laptops" },
                { label: "MacBook Pro", current: true }
              ]}
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-2">Blog Example</h3>
            <Breadcrumbs 
              items={[
                { label: "Blog", href: "/blog" },
                { label: "Technology", href: "/blog/technology" },
                { label: "Web Development", current: true }
              ]}
            />
          </div>
        </div>
      </div>
    </Card>

    <!-- Separator Variants -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Separator Variants</h2>
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-semibold mb-2">Chevron (Default)</h3>
            <Breadcrumbs 
              separator="chevron"
              items={[
                { label: "Home", href: "/" },
                { label: "Products", href: "/products" },
                { label: "Category", href: "/products/category" },
                { label: "Item", current: true }
              ]}
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-2">Slash</h3>
            <Breadcrumbs 
              separator="slash"
              items={[
                { label: "Home", href: "/" },
                { label: "Products", href: "/products" },
                { label: "Category", href: "/products/category" },
                { label: "Item", current: true }
              ]}
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-2">Dot</h3>
            <Breadcrumbs 
              separator="dot"
              items={[
                { label: "Home", href: "/" },
                { label: "Products", href: "/products" },
                { label: "Category", href: "/products/category" },
                { label: "Item", current: true }
              ]}
            />
          </div>
        </div>
      </div>
    </Card>

    <!-- Home Icon Options -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Home Icon Options</h2>
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-semibold mb-2">With Home Icon (Default)</h3>
            <Breadcrumbs 
              showHome={true}
              items={[
                { label: "Products", href: "/products" },
                { label: "Electronics", href: "/products/electronics" },
                { label: "Smartphone", current: true }
              ]}
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-2">Without Home Icon</h3>
            <Breadcrumbs 
              showHome={false}
              items={[
                { label: "Products", href: "/products" },
                { label: "Electronics", href: "/products/electronics" },
                { label: "Smartphone", current: true }
              ]}
            />
          </div>
        </div>
      </div>
    </Card>

    <!-- Complex Examples -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Complex Examples</h2>
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-semibold mb-2">Deep Navigation</h3>
            <Breadcrumbs 
              items={[
                { label: "Dashboard", href: "/dashboard" },
                { label: "Settings", href: "/dashboard/settings" },
                { label: "User Management", href: "/dashboard/settings/users" },
                { label: "Permissions", href: "/dashboard/settings/users/permissions" },
                { label: "Role Editor", current: true }
              ]}
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-2">Single Item (Current Only)</h3>
            <Breadcrumbs 
              items={[
                { label: "Welcome Page", current: true }
              ]}
            />
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-2">No Home, Slash Separator</h3>
            <Breadcrumbs 
              showHome={false}
              separator="slash"
              items={[
                { label: "Documentation", href: "/docs" },
                { label: "Components", href: "/docs/components" },
                { label: "Navigation", href: "/docs/components/navigation" },
                { label: "Breadcrumbs", current: true }
              ]}
            />
          </div>
        </div>
      </div>
    </Card>

    <!-- Interactive Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Interactive Test</h2>
        <div x-data="{ 
          currentPath: ['Dashboard', 'Users', 'Profile'],
          showHome: true,
          separator: 'chevron'
        }">
          <div class="space-y-4 mb-6">
            <div class="flex flex-wrap gap-4">
              <div class="flex items-center gap-2">
                <label class="text-sm font-medium">Show Home:</label>
                <input 
                  type="checkbox" 
                  x-model="showHome"
                  class="rounded border-neutral-300 text-blue-600 focus:ring-blue-500"
                >
              </div>
              
              <div class="flex items-center gap-2">
                <label class="text-sm font-medium">Separator:</label>
                <select 
                  x-model="separator"
                  class="rounded border-neutral-300 text-sm px-2 py-1"
                >
                  <option value="chevron">Chevron</option>
                  <option value="slash">Slash</option>
                  <option value="dot">Dot</option>
                </select>
              </div>
            </div>
            
            <div class="flex gap-2">
              <Button 
                variant="outline" 
                color="blue" 
                size="sm"
                x-on:click="currentPath = ['Home']"
              >
                Set to Home
              </Button>
              <Button 
                variant="outline" 
                color="green" 
                size="sm"
                x-on:click="currentPath = ['Dashboard', 'Analytics']"
              >
                Set to Analytics
              </Button>
              <Button 
                variant="outline" 
                color="purple" 
                size="sm"
                x-on:click="currentPath = ['Products', 'Electronics', 'Laptops', 'MacBook Pro']"
              >
                Set to Product
              </Button>
            </div>
          </div>
          
          <div class="p-4 bg-neutral-50 rounded-lg">
            <p class="text-sm font-medium mb-2">Current Configuration:</p>
            <p class="text-xs text-neutral-600 mb-3">
              Path: <span x-text="currentPath.join(' > ')"></span> | 
              Home: <span x-text="showHome ? 'Yes' : 'No'"></span> | 
              Separator: <span x-text="separator"></span>
            </p>
            
            <!-- Note: This is a static example since we can't dynamically change Astro props -->
            <Breadcrumbs 
              items={[
                { label: "Dashboard", href: "/dashboard" },
                { label: "Users", href: "/users" },
                { label: "Profile", current: true }
              ]}
            />
            <p class="text-xs text-neutral-500 mt-2">
              Note: This shows a static example. In a real app, you'd pass the dynamic data to the component.
            </p>
          </div>
        </div>
      </div>
    </Card>

    <!-- Accessibility Test -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Accessibility Features</h2>
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-semibold mb-2">ARIA Labels and Navigation</h3>
            <Breadcrumbs 
              items={[
                { label: "Accessibility", href: "/accessibility" },
                { label: "Navigation", href: "/accessibility/navigation" },
                { label: "Breadcrumbs Guide", current: true }
              ]}
            />
            <p class="text-sm text-neutral-600 mt-2">
              • Uses semantic <code>&lt;nav&gt;</code> element with aria-label<br>
              • Ordered list structure for proper screen reader support<br>
              • Current page marked with aria-current="page"<br>
              • Home icon has aria-label for accessibility
            </p>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-2">Keyboard Navigation</h3>
            <Breadcrumbs 
              items={[
                { label: "Docs", href: "/docs" },
                { label: "Keyboard Navigation", current: true }
              ]}
            />
            <p class="text-sm text-neutral-600 mt-2">
              All links are keyboard accessible with Tab navigation and proper focus states.
            </p>
          </div>
        </div>
      </div>
    </Card>

    <!-- Status Summary -->
    <Card>
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Test Results</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">All separator types render correctly</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">Home icon toggle working</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">Current page indication</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">Hover states and transitions</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">Accessibility features</p>
          </div>
          <div class="text-center p-4 bg-green-50 rounded-lg">
            <Badge color="green" class="mb-2">✓ Working</Badge>
            <p class="text-sm">Alpine.js integration demo</p>
          </div>
        </div>
      </div>
    </Card>
  </main>
</Layout>