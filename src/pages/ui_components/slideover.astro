---
import Layout from '../../layouts/Layout.astro';
import Card from '../../components/pine/Card.astro';
import Button from '../../components/pine/Button.astro';
import Badge from '../../components/pine/Badge.astro';
import SlideOver from '../../components/pine/SlideOver.astro';
import TextInput from '../../components/pine/TextInput.astro';
import Textarea from '../../components/pine/Textarea.astro';
import Switch from '../../components/pine/Switch.astro';
---

<Layout title="SlideOver Component Test">
  <main class="container mx-auto px-4 py-8 max-w-4xl">
    <!-- Header -->
    <div class="text-center mb-8">
      <h1 class="text-3xl font-bold mb-4">SlideOver Component Test</h1>
      <div class="flex justify-center gap-2 mb-6">
        <Button href="/test" variant="outline" color="neutral">← Back to Test Suite</Button>
        <Button href="/test/all" variant="ghost" color="neutral">View All</Button>
      </div>
    </div>

    <!-- Basic SlideOver (Right Side) -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Basic SlideOver (Right Side)</h2>
        <div class="space-y-4">
          <p class="text-neutral-600">Standard slide-over panel from the right side</p>
          
          <SlideOver id="basic-slideover" side="right" size="md">
            <div slot="trigger">
              <Button variant="solid" color="blue">Open Right SlideOver</Button>
            </div>
            
            <div slot="header">
              <h2 class="text-lg font-medium text-gray-900">User Profile</h2>
              <p class="text-sm text-gray-500">Edit your profile information</p>
            </div>
            
            <div slot="body">
              <div class="space-y-6">
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
                  <TextInput placeholder="Enter your full name" />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Email</label>
                  <TextInput type="email" placeholder="Enter your email" />
                </div>
                <div>
                  <label class="block text-sm font-medium text-gray-700 mb-2">Bio</label>
                  <Textarea placeholder="Tell us about yourself" rows={4} />
                </div>
                <div class="flex items-center justify-between">
                  <div>
                    <h3 class="text-sm font-medium text-gray-700">Email Notifications</h3>
                    <p class="text-sm text-gray-500">Receive updates via email</p>
                  </div>
                  <Switch />
                </div>
                <div class="flex items-center justify-between">
                  <div>
                    <h3 class="text-sm font-medium text-gray-700">Public Profile</h3>
                    <p class="text-sm text-gray-500">Make your profile visible to others</p>
                  </div>
                  <Switch />
                </div>
              </div>
            </div>
            
            <div slot="footer">
              <Button variant="outline" color="neutral">Cancel</Button>
              <Button variant="solid" color="blue">Save Changes</Button>
            </div>
          </SlideOver>
        </div>
      </div>
    </Card>

    <!-- Left Side SlideOver -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Left Side SlideOver</h2>
        <div class="space-y-4">
          <p class="text-neutral-600">SlideOver panel that slides in from the left</p>
          
          <SlideOver id="left-slideover" side="left" size="lg">
            <div slot="trigger">
              <Button variant="solid" color="green">Open Left SlideOver</Button>
            </div>
            
            <div slot="header">
              <h2 class="text-lg font-medium text-gray-900">Navigation Menu</h2>
              <p class="text-sm text-gray-500">Site navigation and shortcuts</p>
            </div>
            
            <div slot="body">
              <nav class="space-y-1">
                <div class="pb-4">
                  <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Main Navigation</h3>
                  <div class="space-y-1">
                    <a href="#" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-100">
                      <svg class="mr-3 w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2H5a2 2 0 00-2-2z"></path>
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 5a2 2 0 012-2h4a2 2 0 012 2v6a2 2 0 01-2 2H10a2 2 0 01-2-2V5z"></path>
                      </svg>
                      Dashboard
                    </a>
                    <a href="#" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-100">
                      <svg class="mr-3 w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                      </svg>
                      Team
                    </a>
                    <a href="#" class="group flex items-center px-2 py-2 text-sm font-medium rounded-md text-gray-900 hover:bg-gray-100">
                      <svg class="mr-3 w-5 h-5 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10"></path>
                      </svg>
                      Projects
                    </a>
                  </div>
                </div>
                
                <div class="pt-4 border-t border-gray-200">
                  <h3 class="text-xs font-semibold text-gray-500 uppercase tracking-wider mb-3">Recent Items</h3>
                  <div class="space-y-1">
                    <a href="#" class="group flex items-center px-2 py-2 text-sm text-gray-600 hover:bg-gray-100 rounded-md">
                      Project Alpha
                    </a>
                    <a href="#" class="group flex items-center px-2 py-2 text-sm text-gray-600 hover:bg-gray-100 rounded-md">
                      Design System
                    </a>
                    <a href="#" class="group flex items-center px-2 py-2 text-sm text-gray-600 hover:bg-gray-100 rounded-md">
                      Marketing Campaign
                    </a>
                  </div>
                </div>
              </nav>
            </div>
            
            <div slot="footer">
              <Button variant="ghost" color="neutral" class="w-full">Close Menu</Button>
            </div>
          </SlideOver>
        </div>
      </div>
    </Card>

    <!-- Top SlideOver -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Top SlideOver</h2>
        <div class="space-y-4">
          <p class="text-neutral-600">SlideOver panel that slides down from the top</p>
          
          <SlideOver id="top-slideover" side="top" size="md">
            <div slot="trigger">
              <Button variant="solid" color="purple">Open Top SlideOver</Button>
            </div>
            
            <div slot="header">
              <h2 class="text-lg font-medium text-gray-900">Notifications</h2>
              <p class="text-sm text-gray-500">Recent activity and updates</p>
            </div>
            
            <div slot="body">
              <div class="space-y-4">
                <div class="flex items-start space-x-3 p-3 bg-blue-50 rounded-lg">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-blue-500 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M8.707 7.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l2-2a1 1 0 00-1.414-1.414L11 7.586V3a1 1 0 10-2 0v4.586l-.293-.293z"></path>
                        <path d="M3 5a2 2 0 012-2h1a1 1 0 010 2H5v7h2l1 2h4l1-2h2V5h-1a1 1 0 110-2h1a2 2 0 012 2v10a2 2 0 01-2 2H5a2 2 0 01-2-2V5z"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1">
                    <p class="text-sm font-medium text-gray-900">New message received</p>
                    <p class="text-sm text-gray-500">John sent you a new message</p>
                    <p class="text-xs text-gray-400 mt-1">2 minutes ago</p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-3 p-3 bg-green-50 rounded-lg">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1">
                    <p class="text-sm font-medium text-gray-900">Task completed</p>
                    <p class="text-sm text-gray-500">Website deployment finished successfully</p>
                    <p class="text-xs text-gray-400 mt-1">15 minutes ago</p>
                  </div>
                </div>
                
                <div class="flex items-start space-x-3 p-3 bg-yellow-50 rounded-lg">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 bg-yellow-500 rounded-full flex items-center justify-center">
                      <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                      </svg>
                    </div>
                  </div>
                  <div class="flex-1">
                    <p class="text-sm font-medium text-gray-900">System maintenance</p>
                    <p class="text-sm text-gray-500">Scheduled maintenance in 2 hours</p>
                    <p class="text-xs text-gray-400 mt-1">1 hour ago</p>
                  </div>
                </div>
              </div>
            </div>
            
            <div slot="footer">
              <Button variant="outline" color="neutral">Mark All Read</Button>
              <Button variant="solid" color="purple">View All</Button>
            </div>
          </SlideOver>
        </div>
      </div>
    </Card>

    <!-- Bottom SlideOver -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Bottom SlideOver</h2>
        <div class="space-y-4">
          <p class="text-neutral-600">SlideOver panel that slides up from the bottom</p>
          
          <SlideOver id="bottom-slideover" side="bottom" size="sm">
            <div slot="trigger">
              <Button variant="solid" color="orange">Open Bottom SlideOver</Button>
            </div>
            
            <div slot="header">
              <h2 class="text-lg font-medium text-gray-900">Quick Actions</h2>
              <p class="text-sm text-gray-500">Common tasks and shortcuts</p>
            </div>
            
            <div slot="body">
              <div class="grid grid-cols-3 gap-4">
                <button class="flex flex-col items-center p-4 rounded-lg border border-gray-200 hover:bg-gray-50 transition-colors">
                  <svg class="w-8 h-8 text-blue-500 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                  <span class="text-sm font-medium text-gray-900">Create</span>
                </button>
                
                <button class="flex flex-col items-center p-4 rounded-lg border border-gray-200 hover:bg-gray-50 transition-colors">
                  <svg class="w-8 h-8 text-green-500 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
                  </svg>
                  <span class="text-sm font-medium text-gray-900">Upload</span>
                </button>
                
                <button class="flex flex-col items-center p-4 rounded-lg border border-gray-200 hover:bg-gray-50 transition-colors">
                  <svg class="w-8 h-8 text-purple-500 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.367 2.684 3 3 0 00-5.367-2.684z"></path>
                  </svg>
                  <span class="text-sm font-medium text-gray-900">Share</span>
                </button>
                
                <button class="flex flex-col items-center p-4 rounded-lg border border-gray-200 hover:bg-gray-50 transition-colors">
                  <svg class="w-8 h-8 text-red-500 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                  </svg>
                  <span class="text-sm font-medium text-gray-900">Delete</span>
                </button>
                
                <button class="flex flex-col items-center p-4 rounded-lg border border-gray-200 hover:bg-gray-50 transition-colors">
                  <svg class="w-8 h-8 text-yellow-500 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z"></path>
                  </svg>
                  <span class="text-sm font-medium text-gray-900">Favorite</span>
                </button>
                
                <button class="flex flex-col items-center p-4 rounded-lg border border-gray-200 hover:bg-gray-50 transition-colors">
                  <svg class="w-8 h-8 text-indigo-500 mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                  </svg>
                  <span class="text-sm font-medium text-gray-900">Settings</span>
                </button>
              </div>
            </div>
            
            <div slot="footer">
              <Button variant="ghost" color="neutral" class="w-full">Close</Button>
            </div>
          </SlideOver>
        </div>
      </div>
    </Card>

    <!-- Size Variants -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Size Variants</h2>
        <div class="space-y-4">
          <p class="text-neutral-600">Different sizes of SlideOver panels</p>
          
          <div class="flex flex-wrap gap-4">
            <SlideOver id="small-slideover" side="right" size="sm">
              <div slot="trigger">
                <Button variant="outline" color="blue" size="sm">Small</Button>
              </div>
              
              <div slot="header">
                <h2 class="text-lg font-medium text-gray-900">Small Panel</h2>
                <p class="text-sm text-gray-500">Compact side panel</p>
              </div>
              
              <div slot="body">
                <p class="text-sm text-gray-600">This is a small SlideOver panel. Perfect for simple forms or quick information.</p>
              </div>
              
              <div slot="footer">
                <Button variant="outline" color="neutral" size="sm">Cancel</Button>
                <Button variant="solid" color="blue" size="sm">Save</Button>
              </div>
            </SlideOver>
            
            <SlideOver id="large-slideover" side="right" size="lg">
              <div slot="trigger">
                <Button variant="outline" color="green" size="sm">Large</Button>
              </div>
              
              <div slot="header">
                <h2 class="text-lg font-medium text-gray-900">Large Panel</h2>
                <p class="text-sm text-gray-500">Spacious side panel</p>
              </div>
              
              <div slot="body">
                <div class="space-y-4">
                  <p class="text-sm text-gray-600">This is a large SlideOver panel with more space for complex forms and detailed content.</p>
                  <div class="grid grid-cols-2 gap-4">
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-1">First Name</label>
                      <TextInput placeholder="First name" />
                    </div>
                    <div>
                      <label class="block text-sm font-medium text-gray-700 mb-1">Last Name</label>
                      <TextInput placeholder="Last name" />
                    </div>
                  </div>
                  <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                    <Textarea placeholder="Enter description" rows={3} />
                  </div>
                </div>
              </div>
              
              <div slot="footer">
                <Button variant="outline" color="neutral">Cancel</Button>
                <Button variant="solid" color="green">Save</Button>
              </div>
            </SlideOver>
            
            <SlideOver id="xl-slideover" side="right" size="xl">
              <div slot="trigger">
                <Button variant="outline" color="purple" size="sm">Extra Large</Button>
              </div>
              
              <div slot="header">
                <h2 class="text-lg font-medium text-gray-900">Extra Large Panel</h2>
                <p class="text-sm text-gray-500">Maximum width panel</p>
              </div>
              
              <div slot="body">
                <div class="space-y-6">
                  <p class="text-sm text-gray-600">This is an extra large SlideOver panel that provides maximum space for complex interfaces.</p>
                  
                  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
                    <div class="space-y-4">
                      <h3 class="text-sm font-semibold text-gray-900">Personal Information</h3>
                      <div class="space-y-3">
                        <div>
                          <label class="block text-sm font-medium text-gray-700 mb-1">Full Name</label>
                          <TextInput placeholder="Enter full name" />
                        </div>
                        <div>
                          <label class="block text-sm font-medium text-gray-700 mb-1">Email</label>
                          <TextInput type="email" placeholder="Enter email" />
                        </div>
                        <div>
                          <label class="block text-sm font-medium text-gray-700 mb-1">Phone</label>
                          <TextInput type="tel" placeholder="Enter phone number" />
                        </div>
                      </div>
                    </div>
                    
                    <div class="space-y-4">
                      <h3 class="text-sm font-semibold text-gray-900">Additional Details</h3>
                      <div class="space-y-3">
                        <div>
                          <label class="block text-sm font-medium text-gray-700 mb-1">Company</label>
                          <TextInput placeholder="Enter company name" />
                        </div>
                        <div>
                          <label class="block text-sm font-medium text-gray-700 mb-1">Position</label>
                          <TextInput placeholder="Enter position" />
                        </div>
                        <div>
                          <label class="block text-sm font-medium text-gray-700 mb-1">Notes</label>
                          <Textarea placeholder="Additional notes" rows={3} />
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              
              <div slot="footer">
                <Button variant="outline" color="neutral">Cancel</Button>
                <Button variant="solid" color="purple">Save</Button>
              </div>
            </SlideOver>
          </div>
        </div>
      </div>
    </Card>

    <!-- Special Features -->
    <Card class="mb-8">
      <div class="p-6">
        <h2 class="text-2xl font-bold mb-4">Special Features</h2>
        <div class="space-y-6">
          <div>
            <h3 class="text-lg font-semibold mb-2">Non-closeable SlideOver</h3>
            <p class="text-neutral-600 mb-3">SlideOver that cannot be closed by clicking outside or pressing escape</p>
            
            <SlideOver id="non-closeable-slideover" side="right" size="md" closeable={false}>
              <div slot="trigger">
                <Button variant="solid" color="red">Open Non-closeable</Button>
              </div>
              
              <div slot="header">
                <h2 class="text-lg font-medium text-gray-900">Important Notice</h2>
                <p class="text-sm text-gray-500">This panel requires your attention</p>
              </div>
              
              <div slot="body">
                <div class="space-y-4">
                  <div class="p-4 bg-red-50 border border-red-200 rounded-lg">
                    <div class="flex">
                      <svg class="w-5 h-5 text-red-400 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                      </svg>
                      <div class="ml-3">
                        <h3 class="text-sm font-medium text-red-800">Action Required</h3>
                        <p class="text-sm text-red-700 mt-1">This panel cannot be closed by clicking outside or pressing escape. You must use the buttons below.</p>
                      </div>
                    </div>
                  </div>
                  
                  <p class="text-sm text-gray-600">This demonstrates a SlideOver that requires explicit user action to close, useful for critical confirmations or required forms.</p>
                </div>
              </div>
              
              <div slot="footer">
                <Button variant="outline" color="neutral">Acknowledge</Button>
                <Button variant="solid" color="red">Confirm Action</Button>
              </div>
            </SlideOver>
          </div>
          
          <div>
            <h3 class="text-lg font-semibold mb-2">No Overlay SlideOver</h3>
